{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Créer un compte',
        'back_url': path('app_home'),
        'back_label': '← Accueil'
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <div class="max-w-md mx-auto wrapper-background w-full">
            <div class="text-center mb-6">
                <h1 class="text-white text-2xl font-bold">Créer un compte</h1>
                <p class="text-gray-400 mt-2">Rejoignez la communauté trading Dofus</p>
            </div>

            {{ form_start(registrationForm) }}

            {% if registrationForm.vars.errors|length > 0 %}
                <div class="bg-red-600 text-white p-3 rounded-lg mb-4">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white rounded-md focus:outline-none focus:border-blue-500'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white rounded-md focus:outline-none focus:border-blue-500'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
                <div class="text-gray-400 text-sm mt-1">Minimum 6 caractères</div>
            </div>

            <div class="mb-6">
                <div class="flex items-start">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500 focus:ring-2 mt-1 mr-3'}}) }}
                    <div class="text-sm">
                        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'text-gray-300'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                </div>
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                Créer mon compte
            </button>

            {{ form_end(registrationForm) }}

            <div class="text-center mt-6">
                <p class="text-gray-400">
                    Déjà un compte ? 
                    <a href="{{ path('app_login') }}" class="text-blue-400 hover:text-blue-300">Se connecter</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}