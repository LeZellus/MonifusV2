<!-- Mobile Card for Market Watch Observation -->
<div class="bg-gray-700 rounded-lg p-4 border border-gray-600">
    <!-- Item Header -->
    <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-3">
            <img src="{{ item.item.imgUrl ?? '/images/items/default.png' }}"
                 alt="{{ item.item.name }}"
                 class="w-10 h-10 rounded">
            <div>
                <div class="text-white font-medium">{{ item.item.name }}</div>
                <div class="text-gray-400 text-sm">{{ item.marketWatch.observedAt|date('d/m/Y H:i') }}</div>
            </div>
        </div>
    </div>

    <!-- Prices Grid -->
    <div class="grid grid-cols-2 gap-3 mb-4">
        <div class="bg-gray-800 rounded p-3 text-center">
            <div class="text-gray-400 text-xs mb-1">Prix x1</div>
            {% if item.pricePerUnit %}
                <div class="text-green-400 font-semibold">{{ item.pricePerUnit|kamas_format|raw }}</div>
            {% else %}
                <div class="text-gray-500 text-sm">-</div>
            {% endif %}
        </div>
        <div class="bg-gray-800 rounded p-3 text-center">
            <div class="text-gray-400 text-xs mb-1">Prix x10</div>
            {% if item.pricePer10 %}
                <div class="text-blue-400 font-semibold">{{ item.pricePer10|kamas_format|raw }}</div>
            {% else %}
                <div class="text-gray-500 text-sm">-</div>
            {% endif %}
        </div>
        <div class="bg-gray-800 rounded p-3 text-center">
            <div class="text-gray-400 text-xs mb-1">Prix x100</div>
            {% if item.pricePer100 %}
                <div class="text-purple-400 font-semibold">{{ item.pricePer100|kamas_format|raw }}</div>
            {% else %}
                <div class="text-gray-500 text-sm">-</div>
            {% endif %}
        </div>
        <div class="bg-gray-800 rounded p-3 text-center">
            <div class="text-gray-400 text-xs mb-1">Prix x1000</div>
            {% if item.pricePer1000 %}
                <div class="text-orange-400 font-semibold">{{ item.pricePer1000|kamas_format|raw }}</div>
            {% else %}
                <div class="text-gray-500 text-sm">-</div>
            {% endif %}
        </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-2 pt-3 border-t border-gray-600">
        <a href="{{ path('app_market_watch_edit', {id: item.marketWatch.id}) }}"
           class="flex-1 text-center py-2 px-3 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm transition-colors">
            Modifier
        </a>
        <form method="POST"
              action="{{ path('app_market_watch_delete', {id: item.marketWatch.id}) }}"
              style="display:inline;"
              onsubmit="return confirm('Supprimer cette observation ?')"
              class="flex-1">
            <button type="submit"
                    class="w-full py-2 px-3 bg-red-600 hover:bg-red-700 text-white rounded text-sm transition-colors">
                Supprimer
            </button>
        </form>
    </div>
</div>