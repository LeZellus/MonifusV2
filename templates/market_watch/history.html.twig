{% extends 'base.html.twig' %}

{% block title %}Historique des prix - {{ item.name }}{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <!-- En-t√™te -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
            <div>
                <h1 class="text-white text-3xl font-bold flex items-center">
                    <span class="{% if is_admin_view is defined and is_admin_view %}text-yellow-400{% else %}text-orange-400{% endif %} mr-3">{% if is_admin_view is defined and is_admin_view %}üëë{% else %}üìà{% endif %}</span>
                    Historique des prix - {{ item.name }}
                    {% if is_admin_view is defined and is_admin_view %}
                        <span class="bg-yellow-500 text-black text-sm px-2 py-0.5 rounded font-bold ml-3">ADMIN</span>
                    {% endif %}
                </h1>
                <p class="text-gray-400 mt-2">
                    {{ price_history|length }} observation{{ price_history|length > 1 ? 's' : '' }}
                    {% if current_period is defined and current_period != 'all' %}
                        sur les {{ current_period }} derniers jours
                    {% endif %}
                    {% if is_admin_view is defined and is_admin_view and players_count is defined and players_count > 0 %}
                        <span class="text-yellow-400 ml-2">par {{ players_count }} joueur{{ players_count > 1 ? 's' : '' }}</span>
                    {% endif %}
                </p>
            </div>
            <div class="flex items-center gap-3">
                <!-- S√©lecteur de p√©riode -->
                <form method="GET" action="{{ path('app_market_watch_history', {itemId: item.id}) }}" class="flex items-center gap-2">
                    <label class="text-sm text-gray-400">P√©riode :</label>
                    <select name="period" onchange="this.form.submit()" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg px-3 py-2 focus:border-blue-500 focus:outline-none">
                        <option value="7" {{ current_period == '7' ? 'selected' : '' }}>7 jours</option>
                        <option value="30" {{ current_period == '30' ? 'selected' : '' }}>30 jours</option>
                        <option value="90" {{ current_period == '90' ? 'selected' : '' }}>3 mois</option>
                        <option value="365" {{ current_period == '365' ? 'selected' : '' }}>1 an</option>
                        <option value="all" {{ current_period == 'all' ? 'selected' : '' }}>Tout</option>
                    </select>
                </form>

                <a href="{{ path('app_market_watch_index') }}"
                   class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
                    ‚Üê Retour
                </a>
            </div>
        </div>

        {% if price_history|length == 0 %}
        <!-- Message si aucune observation pour la p√©riode -->
        <div class="bg-yellow-600/20 border border-yellow-600 rounded-lg p-6 mb-6 text-center">
            <div class="text-yellow-400 text-4xl mb-3">üì≠</div>
            <h3 class="text-white text-lg font-semibold mb-2">Aucune observation pour cette p√©riode</h3>
            <p class="text-gray-400">
                Il n'y a pas d'observations enregistr√©es pour "{{ item.name }}"
                {% if current_period is defined and current_period != 'all' %}
                    sur les {{ current_period }} derniers jours.
                {% endif %}
            </p>
            <p class="text-gray-400 mt-2">Essayez de s√©lectionner une p√©riode plus longue ou "Tout".</p>
        </div>
        {% else %}

        <!-- Statistiques rapides - MODIFI√â : Grille 2x2 pour inclure x1000 -->
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
            {% include 'components/stats_card.html.twig' with {
                title: 'Observations total',
                value: price_history|length,
                color: 'blue'
            } %}
            
            {% include 'components/stats_card.html.twig' with {
                title: 'Moyenne x1',
                value: averages.avg_price_unit,
                unit: 'kamas',
                'color': 'green',
                subtitle: averages.price_unit_count > 0 ? '(' ~ averages.price_unit_count ~ ' obs)' : null
            } %}
            
            {% include 'components/stats_card.html.twig' with {
                title: 'Moyenne x10',
                value: averages.avg_price_10,
                unit: 'kamas',
                'color': 'blue',
                subtitle: averages.price_10_count > 0 ? '(' ~ averages.price_10_count ~ ' obs)' : null
            } %}
            
            {% include 'components/stats_card.html.twig' with {
                title: 'Moyenne x100',
                value: averages.avg_price_100,
                unit: 'kamas',
                'color': 'purple',
                subtitle: averages.price_100_count > 0 ? '(' ~ averages.price_100_count ~ ' obs)' : null
            } %}

            <!-- NOUVEAU : Statistiques x1000 -->
            {% include 'components/stats_card.html.twig' with {
                title: 'Moyenne x1000',
                value: averages.avg_price_1000,
                unit: 'kamas',
                'color': 'yellow',
                subtitle: averages.price_1000_count > 0 ? '(' ~ averages.price_1000_count ~ ' obs)' : null
            } %}
        </div>

        <!-- Conseils -->
        {% set moyenne_mobile_content %}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <h4 class="text-blue-300 font-semibold mb-2">ü§î Qu'est-ce que c'est ?</h4>
                    <p>La <strong>moyenne mobile</strong> (courbes en pointill√©s) calcule la moyenne de tous les prix observ√©s depuis le d√©but.</p>
                    <p class="mt-2">Elle lisse les variations et r√©v√®le la <strong>tendance g√©n√©rale</strong> des prix.</p>
                </div>
                <div>
                    <h4 class="text-blue-300 font-semibold mb-2">üìä Comment l'utiliser ?</h4>
                    <ul class="space-y-1">
                        <li>‚Ä¢ <strong>Prix au-dessus</strong> de la moyenne : march√© plut√¥t <span class="text-red-400">cher</span></li>
                        <li>‚Ä¢ <strong>Prix en-dessous</strong> de la moyenne : march√© plut√¥t <span class="text-green-400">favorable</span></li>
                        <li>‚Ä¢ <strong>Tendance montante</strong> : les prix augmentent globalement</li>
                        <li>‚Ä¢ <strong>Tendance descendante</strong> : les prix baissent globalement</li>
                    </ul>
                </div>
            </div>
            
            <div class="bg-blue-800 bg-opacity-30 p-3 rounded-lg mt-3">
                <p class="text-sm">
                    <strong>üí° Conseil :</strong> Utilisez la moyenne mobile pour <strong>timing vos achats</strong>. 
                    Quand le prix actuel est bien en-dessous de la moyenne, c'est souvent un bon moment pour acheter !
                </p>
            </div>
        {% endset %}

        {% include 'components/info_box.html.twig' with {
            title: 'Comprendre la moyenne mobile',
            icon: 'üìà',
            color: 'info',
            content: moyenne_mobile_content
        } %}

        <!-- Graphique d'√©volution -->
        <div class="wrapper-background" data-controller="chart" data-chart-data-value="{{ chart_data|json_encode|e('html_attr') }}" data-chart-type-value="line">
            <div class="flex flex-col space-y-4 mb-4">
                <!-- Titre et boutons de filtre de courbes -->
                <div class="flex justify-between items-center">
                    <h3 class="text-white text-xl font-bold">üìà √âvolution des prix</h3>
                    
                    <!-- Boutons de filtre de courbes - MODIFI√â : Ajout du bouton x1000 -->
                    <div class="flex space-x-2">
                        <button 
                            data-chart-target="filterBtn"
                            data-filter="x1"
                            data-action="click->chart#filterChart"
                            class="active bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors">
                            x1
                        </button>
                        <button 
                            data-chart-target="filterBtn"
                            data-filter="x10"
                            data-action="click->chart#filterChart"
                            class="active bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition-colors">
                            x10
                        </button>
                        <button 
                            data-chart-target="filterBtn"
                            data-filter="x100"
                            data-action="click->chart#filterChart"
                            class="active bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded text-sm transition-colors">
                            x100
                        </button>
                        <!-- NOUVEAU : Bouton x1000 -->
                        <button 
                            data-chart-target="filterBtn"
                            data-filter="x1000"
                            data-action="click->chart#filterChart"
                            class="active bg-yellow-600 hover:bg-yellow-700 text-white px-3 py-1 rounded text-sm transition-colors">
                            x1000
                        </button>
                    </div>
                </div>

                <!-- Boutons de p√©riode temporelle -->
                <div class="flex justify-between items-center">
                    <div class="flex space-x-2">
                        {% for period in [
                            {value: 'all', label: 'Tout'},
                            {value: '30', label: '30j'},
                            {value: '7', label: '7j'},
                            {value: '3', label: '3j'}
                        ] %}
                            <button 
                                data-chart-target="periodBtn"
                                data-period="{{ period.value }}"
                                data-action="click->chart#changePeriod"
                                class="{{ period.value == 'all' ? 'bg-orange-600 text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600' }}">
                                {{ period.label }}
                            </button>
                        {% endfor %}
                    </div>
                    
                    <!-- Info sur les donn√©es affich√©es -->
                    <span data-chart-target="pointsInfo" class="text-gray-400 text-sm">
                        {{ chart_data.labels|length }} points
                    </span>
                </div>
            </div>
            
            <div class="h-80">
                <canvas data-chart-target="canvas"></canvas>
            </div>
        </div>

        <!-- Conseils -->
        {% set analysis_tips_content %}
            <p>‚Ä¢ üìà Les fl√®ches indiquent l'√©volution par rapport √† l'observation pr√©c√©dente</p>
            <p>‚Ä¢ üîÑ Ajoutez r√©guli√®rement de nouvelles observations pour suivre les tendances</p>
            <p>‚Ä¢ üí∞ Utilisez ces donn√©es pour optimiser vos achats et ventes</p>
            <p>‚Ä¢ üìä Plus vous avez de donn√©es, plus vos analyses seront pr√©cises</p>
        {% endset %}

        {% include 'components/info_box.html.twig' with {
            title: 'Analyser l\'√©volution',
            icon: 'üí°',
            color: 'info',
            content: analysis_tips_content
        } %}

        <!-- Actions -->
        <div class="flex justify-between items-center">
            <h3 class="text-white text-xl font-bold">√âvolution des prix</h3>
            {% if not (is_admin_view is defined and is_admin_view) %}
            <a href="{{ path('app_market_watch_new') }}"
               class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                + Nouvelle observation
            </a>
            {% endif %}
        </div>

        <!-- Timeline des prix -->
        <div class="space-y-4">
            {% for observation in price_history %}
                {% set isLatest = loop.first %}
                {% set isOldest = loop.last %}
                
                <div class="wrapper-background border-l-4 {{ isLatest ? 'border-green-500' : (isOldest ? 'border-gray-500' : 'border-blue-500') }}">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center space-x-3">
                            <div class="text-2xl">
                                {% if isLatest %}
                                    üü¢
                                {% elseif isOldest %}
                                    ‚ö´
                                {% else %}
                                    üîµ
                                {% endif %}
                            </div>
                            <div>
                                <div class="text-white font-semibold">
                                    {{ observation.observedAt|date('d/m/Y √† H:i') }}
                                    {% if isLatest %}
                                        <span class="text-green-400 text-sm ml-2">(Derni√®re)</span>
                                    {% elseif isOldest %}
                                        <span class="text-gray-400 text-sm ml-2">(Premi√®re)</span>
                                    {% endif %}
                                </div>
                                {% if is_admin_view is defined and is_admin_view %}
                                    <div class="text-yellow-400 text-sm mt-1">
                                        üë§ {{ observation.dofusCharacter.name }}
                                    </div>
                                {% endif %}
                                {% if observation.notes %}
                                    <div class="text-gray-400 text-sm mt-1">{{ observation.notes }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Actions (masqu√©es en mode admin) -->
                        {% if not (is_admin_view is defined and is_admin_view) %}
                        <div class="flex space-x-2">
                            <a href="{{ path('app_market_watch_edit', {id: observation.id}) }}"
                               class="text-blue-400 hover:text-blue-300 text-sm transition-colors">
                                ‚úèÔ∏è Modifier
                            </a>
                            <form method="post" action="{{ path('app_market_watch_delete', {id: observation.id}) }}"
                                  class="inline"
                                  onsubmit="return confirm('Supprimer cette observation ?')">
                                <button type="submit"
                                        class="text-red-400 hover:text-red-300 text-sm transition-colors">
                                    üóëÔ∏è Supprimer
                                </button>
                            </form>
                        </div>
                        {% endif %}
                    </div>

                    <!-- Prix observ√©s - MODIFI√â : Grille 2x2 pour inclure x1000 -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        <div class="bg-green-600 bg-opacity-20 border border-green-600 rounded p-3 text-center">
                            <div class="text-green-400 text-xs mb-1">Prix x1</div>
                            {% if observation.pricePerUnit %}
                                {{ price(observation.pricePerUnit, 'green') }}
                            {% else %}
                                <div class="text-gray-500">-</div>
                            {% endif %}
                        </div>
                        
                        <div class="bg-blue-600 bg-opacity-20 border border-blue-600 rounded p-3 text-center">
                            <div class="text-blue-400 text-xs mb-1">Prix x10</div>
                            {% if observation.pricePer10 %}
                                {{ price(observation.pricePer10, 'blue') }}
                            {% else %}
                                <div class="text-gray-500">-</div>
                            {% endif %}
                        </div>
                        
                        <div class="bg-purple-600 bg-opacity-20 border border-purple-600 rounded p-3 text-center">
                            <div class="text-purple-400 text-xs mb-1">Prix x100</div>
                            {% if observation.pricePer100 %}
                                {{ price(observation.pricePer100, 'purple') }}
                            {% else %}
                                <div class="text-gray-500">-</div>
                            {% endif %}
                        </div>

                        <!-- NOUVEAU : Prix x1000 -->
                        <div class="bg-yellow-600 bg-opacity-20 border border-yellow-600 rounded p-3 text-center">
                            <div class="text-yellow-400 text-xs mb-1">Prix x1000</div>
                            {% if observation.pricePer1000 %}
                                {{ price(observation.pricePer1000, 'yellow') }}
                            {% else %}
                                <div class="text-gray-500">-</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
{% endblock %}