{% extends 'base.html.twig' %}

{% block title %}Historique des prix - {{ item.name }}{% endblock %}

{% block body %}
    <div class="wrapper-container">
        {% include 'components/section_header.html.twig' with {
            type: 'character',
            character: character,
            action_title: 'Historique des Prix',
            action_description: 'Consulter les √©volutions de prix',
            color: 'orange',
            icon: 'üìà'
        } %}

        <!-- Statistiques rapides -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="wrapper-background text-center">
                <div class="text-2xl font-bold text-blue-400">{{ price_history|length }}</div>
                <div class="text-gray-400 text-sm">Observations total</div>
            </div>
            <div class="wrapper-background text-center">
                <div class="text-lg font-bold text-green-400">
                    {% if averages.avg_price_unit %}
                        {% include 'components/price_display.html.twig' with {
                            price: averages.avg_price_unit,
                            color: 'green',
                            show_kamas: false
                        } %}
                    {% else %}
                        -
                    {% endif %}
                </div>
                <div class="text-gray-400 text-sm">
                    Moyenne x1 
                    {% if averages.price_unit_count > 0 %}
                        ({{ averages.price_unit_count }} obs)
                    {% endif %}
                </div>
            </div>
            <div class="wrapper-background text-center">
                <div class="text-lg font-bold text-blue-400">
                    {% if averages.avg_price_10 %}
                        {% include 'components/price_display.html.twig' with {
                            price: averages.avg_price_10,
                            color: 'blue',
                            show_kamas: false
                        } %}
                    {% else %}
                        -
                    {% endif %}
                </div>
                <div class="text-gray-400 text-sm">
                    Moyenne x10
                    {% if averages.price_10_count > 0 %}
                        ({{ averages.price_10_count }} obs)
                    {% endif %}
                </div>
            </div>
            <div class="wrapper-background text-center">
                <div class="text-lg font-bold text-purple-400">
                    {% if averages.avg_price_100 %}
                        {% include 'components/price_display.html.twig' with {
                            price: averages.avg_price_100,
                            color: 'purple',
                            show_kamas: false
                        } %}
                    {% else %}
                        -
                    {% endif %}
                </div>
                <div class="text-gray-400 text-sm">
                    Moyenne x100
                    {% if averages.price_100_count > 0 %}
                        ({{ averages.price_100_count }} obs)
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Conseils -->
        {% set analysis_tips_content %}
            <p>‚Ä¢ üìà Les fl√®ches indiquent l'√©volution par rapport √† l'observation pr√©c√©dente</p>
            <p>‚Ä¢ üîÑ Ajoutez r√©guli√®rement de nouvelles observations pour suivre les tendances</p>
            <p>‚Ä¢ üí∞ Utilisez ces donn√©es pour optimiser vos achats et ventes</p>
            <p>‚Ä¢ üìä Plus vous avez de donn√©es, plus vos analyses seront pr√©cises</p>
        {% endset %}

        {% include 'components/info_box.html.twig' with {
            title: 'Analyser l\'√©volution',
            icon: 'üí°',
            color: 'info',
            content: analysis_tips_content
        } %}

        <!-- Actions -->
        <div class="flex justify-between items-center">
            <h3 class="text-white text-xl font-bold">√âvolution des prix</h3>
            <a href="{{ path('app_market_watch_new') }}" 
               class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                + Nouvelle observation
            </a>
        </div>

        <!-- Timeline des prix -->
        <div class="space-y-4">
            {% for observation in price_history %}
                {% set isLatest = loop.first %}
                {% set isOldest = loop.last %}
                
                <div class="wrapper-background border-l-4 {{ isLatest ? 'border-green-500' : (isOldest ? 'border-gray-500' : 'border-blue-500') }}">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <div class="flex items-center space-x-2">
                                <h4 class="text-white font-semibold">{{ observation.observedAt|date('d/m/Y √† H:i') }}</h4>
                                {% if isLatest %}
                                    <span class="bg-green-600 text-green-100 px-2 py-1 rounded-full text-xs">R√âCENT</span>
                                {% elseif isOldest %}
                                    <span class="bg-gray-600 text-gray-100 px-2 py-1 rounded-full text-xs">PREMIER</span>
                                {% endif %}
                            </div>
                            <p class="text-gray-400 text-sm">
                                Il y a {{ (observation.observedAt.diff(date())).days }} jour(s)
                            </p>
                        </div>
                        <div class="flex space-x-2">
                            <a href="{{ path('app_market_watch_edit', {id: observation.id}) }}" 
                               class="text-blue-400 hover:text-blue-300 text-sm">Modifier</a>
                        </div>
                    </div>

                    <!-- Prix observ√©s -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                        <div class="bg-gray-700 rounded-lg p-3">
                            <div class="text-gray-400 text-sm mb-1">Prix x1</div>
                            {% if observation.pricePerUnit %}
                                {% include 'components/price_display.html.twig' with {
                                    price: observation.pricePerUnit,
                                    size: 'large',
                                    color: 'green',
                                    show_kamas: false
                                } %}
                                {% if not loop.last %}
                                    {% set prevObservation = price_history[loop.index] %}
                                    {% if prevObservation.pricePerUnit %}
                                        {% set diff = observation.pricePerUnit - prevObservation.pricePerUnit %}
                                        {% if diff != 0 %}
                                            <div class="text-{{ diff > 0 ? 'red' : 'green' }}-400 text-xs">
                                                {{ diff > 0 ? '‚Üó' : '‚Üò' }} {{ (diff / 1000)|number_format(0, ',', ' ') }}k
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                <div class="text-gray-500">Non observ√©</div>
                            {% endif %}
                        </div>

                        <div class="bg-gray-700 rounded-lg p-3">
                            <div class="text-gray-400 text-sm mb-1">Prix x10</div>
                            {% if observation.pricePer10 %}
                                {% include 'components/price_display.html.twig' with {
                                    price: observation.pricePer10,
                                    size: 'large',
                                    color: 'blue',
                                    show_kamas: true
                                } %}
                                {% if not loop.last %}
                                    {% set prevObservation = price_history[loop.index] %}
                                    {% if prevObservation.pricePer10 %}
                                        {% set diff = observation.pricePer10 - prevObservation.pricePer10 %}
                                        {% if diff != 0 %}
                                            <div class="text-{{ diff > 0 ? 'red' : 'green' }}-400 text-xs">
                                                {{ diff > 0 ? '‚Üó' : '‚Üò' }} {{ (diff / 1000)|number_format(0, ',', ' ') }}k
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                <div class="text-gray-500">Non observ√©</div>
                            {% endif %}
                        </div>

                        <div class="bg-gray-700 rounded-lg p-3">
                            <div class="text-gray-400 text-sm mb-1">Prix x100</div>
                            {% if observation.pricePer100 %}
                                {% include 'components/price_display.html.twig' with {
                                    price: observation.pricePer100,
                                    size: 'large',
                                    color: 'purple',
                                    show_kamas: true
                                } %}
                                {% if not loop.last %}
                                    {% set prevObservation = price_history[loop.index] %}
                                    {% if prevObservation.pricePer100 %}
                                        {% set diff = observation.pricePer100 - prevObservation.pricePer100 %}
                                        {% if diff != 0 %}
                                            <div class="text-{{ diff > 0 ? 'red' : 'green' }}-400 text-xs">
                                                {{ diff > 0 ? '‚Üó' : '‚Üò' }} {{ (diff / 1000)|number_format(0, ',', ' ') }}k
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                <div class="text-gray-500">Non observ√©</div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Notes -->
                    {% if observation.notes %}
                        <div class="bg-gray-700 bg-opacity-50 rounded-lg p-3">
                            <div class="text-gray-400 text-sm mb-1">üìù Notes :</div>
                            <p class="text-gray-300 text-sm italic">"{{ observation.notes }}"</p>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}