{% extends 'base.html.twig' %}

{% block title %}Nouvelle Surveillance - {{ character.name }}{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouvelle Surveillance - ' ~ character.name,
        'back_url': path('app_market_watch_index')
    } %}
{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">

    <div class="wrapper-container">
        <div class="max-w-md mx-auto bg-gray-800 rounded-lg p-4">
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_label(form.item, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.item) }}
                {{ form_errors(form.item) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.lotSize, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.lotSize) }}
                {{ form_errors(form.lotSize) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.observedPrice, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.observedPrice) }}
                {{ form_errors(form.observedPrice) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.priceType, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.priceType) }}
                {{ form_errors(form.priceType) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.notes) }}
                {{ form_errors(form.notes) }}
            </div>

            <button type="submit" class="w-full bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Cr√©er la surveillance
            </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}