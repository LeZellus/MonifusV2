{% extends 'base.html.twig' %}

{% block title %}Nouvelle Observation - {{ character.name }}{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouvelle Observation - ' ~ character.name,
        'back_url': path('app_market_watch_index')
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <div class="max-w-2xl mx-auto">
            <!-- En-t√™te avec info personnage -->
            <div class="wrapper-background mb-6">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 rounded-full overflow-hidden">
                        <img src="{{ character.classe.imagePath }}" 
                            alt="{{ character.classe.name }}" 
                            class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h2 class="text-white text-xl font-semibold">{{ character.name }}</h2>
                        <p class="text-gray-400">{{ character.classe.name }} ‚Ä¢ {{ character.server.name }}</p>
                    </div>
                    <div class="ml-auto text-right">
                        <div class="text-orange-400 font-semibold">üìä Nouvelle Observation</div>
                        <div class="text-gray-400 text-sm">Observer les prix du march√©</div>
                    </div>
                </div>
            </div>

            <!-- Explication du syst√®me -->
            <div class="bg-gradient-to-r from-orange-600 to-red-600 rounded-lg p-4 mb-6">
                <h3 class="text-white font-bold mb-2 flex items-center">
                    <span class="text-xl mr-2">üí°</span>
                    Comment √ßa marche ?
                </h3>
                <div class="text-orange-100 text-sm space-y-1">
                    <p>‚Ä¢ üìã Observez les prix sur l'h√¥tel de vente de votre serveur</p>
                    <p>‚Ä¢ üî¢ Notez les prix par unit√© (x1), par 10 (x10) et/ou par 100 (x100)</p>
                    <p>‚Ä¢ üìà R√©p√©tez r√©guli√®rement pour suivre l'√©volution des prix</p>
                    <p>‚Ä¢ üí∞ Identifiez les meilleures opportunit√©s d'achat/vente</p>
                </div>
            </div>

            <!-- Formulaire principal -->
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-6 flex items-center">
                    <span class="text-2xl mr-3">üìù</span>
                    Observer les prix du march√©
                </h3>

                {{ form_start(form) }}
                
                <div class="space-y-6">
                    <!-- Ressource -->
                    <div>
                        {{ form_label(form.item, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        {{ form_widget(form.item, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-opacity-20'}}) }}
                        {{ form_errors(form.item) }}
                        <div class="text-gray-400 text-sm mt-1">üîç Quelle ressource observez-vous ?</div>
                    </div>

                    <!-- Date d'observation -->
                    <div>
                        {{ form_label(form.observedAt, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        {{ form_widget(form.observedAt, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-opacity-20'}}) }}
                        {{ form_errors(form.observedAt) }}
                        <div class="text-gray-400 text-sm mt-1">üìÖ Quand avez-vous observ√© ces prix ?</div>
                    </div>

                    <!-- Prix observ√©s -->
                    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-4">
                        <h4 class="text-white font-semibold mb-4 flex items-center">
                            <span class="mr-2">üí∞</span>
                            Prix observ√©s sur l'h√¥tel de vente
                        </h4>
                        <div class="text-blue-100 text-sm mb-4">
                            Renseignez au moins un prix. Laissez vide si cette unit√© n'est pas disponible.
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="bg-white bg-opacity-10 rounded-lg p-4">
                                {{ form_label(form.pricePerUnit, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                                <div class="relative">
                                    {{ form_widget(form.pricePerUnit, {'attr': {'class': 'w-full px-4 py-3 pr-12 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:ring-opacity-20'}}) }}
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                        <span class="text-gray-400 text-sm">kamas</span>
                                    </div>
                                </div>
                                {{ form_errors(form.pricePerUnit) }}
                                <div class="text-green-200 text-xs mt-1">Prix d'1 seule unit√©</div>
                            </div>

                            <div class="bg-white bg-opacity-10 rounded-lg p-4">
                                {{ form_label(form.pricePer10, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                                <div class="relative">
                                    {{ form_widget(form.pricePer10, {'attr': {'class': 'w-full px-4 py-3 pr-12 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20'}}) }}
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                        <span class="text-gray-400 text-sm">kamas</span>
                                    </div>
                                </div>
                                {{ form_errors(form.pricePer10) }}
                                <div class="text-blue-200 text-xs mt-1">Prix d'un lot de 10</div>
                            </div>

                            <div class="bg-white bg-opacity-10 rounded-lg p-4">
                                {{ form_label(form.pricePer100, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                                <div class="relative">
                                    {{ form_widget(form.pricePer100, {'attr': {'class': 'w-full px-4 py-3 pr-12 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20'}}) }}
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                        <span class="text-gray-400 text-sm">kamas</span>
                                    </div>
                                </div>
                                {{ form_errors(form.pricePer100) }}
                                <div class="text-purple-200 text-xs mt-1">Prix d'un lot de 100</div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes -->
                    <div>
                        {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        {{ form_widget(form.notes, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-opacity-20', 'rows': 3}}) }}
                        {{ form_errors(form.notes) }}
                        <div class="text-gray-400 text-sm mt-1">üìù Contexte du march√©, tendances observ√©es...</div>
                    </div>
                </div>

                <!-- Calcul automatique du prix unitaire -->
                <div id="price-analysis" class="mt-6 bg-gradient-to-r from-green-600 to-teal-600 rounded-lg p-4" style="display: none;">
                    <h4 class="text-white font-semibold mb-2 flex items-center">
                        <span class="mr-2">üìä</span>
                        Analyse des prix
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                        <div id="unit-price-analysis" class="text-green-100"></div>
                        <div id="per10-analysis" class="text-green-100"></div>
                        <div id="per100-analysis" class="text-green-100"></div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 mt-8">
                    <button type="submit" class="flex-1 bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-6 rounded-lg transition-colors flex items-center justify-center">
                        <span class="mr-2">üìä</span>
                        Enregistrer l'observation
                    </button>
                    <a href="{{ path('app_market_watch_index') }}" 
                       class="flex-1 bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg transition-colors text-center flex items-center justify-center">
                        <span class="mr-2">‚ùå</span>
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const priceUnit = document.getElementById('market_watch_pricePerUnit');
        const price10 = document.getElementById('market_watch_pricePer10');
        const price100 = document.getElementById('market_watch_pricePer100');
        const analysisDiv = document.getElementById('price-analysis');
        
        function updateAnalysis() {
            const p1 = parseInt(priceUnit.value) || 0;
            const p10 = parseInt(price10.value) || 0;
            const p100 = parseInt(price100.value) || 0;
            
            if (p1 > 0 || p10 > 0 || p100 > 0) {
                analysisDiv.style.display = 'block';
                
                // Calcul du prix unitaire √† partir des lots
                const unitFrom10 = p10 > 0 ? p10 / 10 : 0;
                const unitFrom100 = p100 > 0 ? p100 / 100 : 0;
                
                document.getElementById('unit-price-analysis').innerHTML = 
                    p1 > 0 ? `Prix unitaire direct: ${p1.toLocaleString()}k` : '';
                    
                document.getElementById('per10-analysis').innerHTML = 
                    p10 > 0 ? `Prix unitaire via x10: ${unitFrom10.toLocaleString()}k` : '';
                    
                document.getElementById('per100-analysis').innerHTML = 
                    p100 > 0 ? `Prix unitaire via x100: ${unitFrom100.toLocaleString()}k` : '';
            } else {
                analysisDiv.style.display = 'none';
            }
        }
        
        [priceUnit, price10, price100].forEach(input => {
            if (input) input.addEventListener('input', updateAnalysis);
        });
    });
    </script>
{% endblock %}