{% extends 'base.html.twig' %}

{% block title %}Observation des Prix{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Observation des Prix',
        'back_url': path('app_trading_dashboard'),
        'back_label': '← Dashboard'
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <!-- Sélecteur de personnage -->
        {% include 'components/character_selector.html.twig' %}

        {% if selectedCharacter %}
            <div class="flex justify-between items-center">
                <h2 class="text-white text-2xl font-bold">
                    Items observés par {{ selectedCharacter.name }}
                </h2>
                <a href="{{ path('app_market_watch_new') }}" 
                   class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-colors">
                    + Nouvelle observation
                </a>
            </div>

            {% if items_data|length > 0 %}
                <!-- Vue desktop -->
                <div class="hidden lg:block bg-gray-800 rounded-lg overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-700">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Ressource</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Moy. x1</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Moy. x10</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Moy. x100</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Suivi</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                            {% for data in items_data %}
                                <tr class="hover:bg-gray-700">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% include 'components/item_display.html.twig' with {
                                            item: data.item, 
                                            link: path('app_market_watch_history', {itemId: data.item.id})
                                        } %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if data.avg_price_unit %}
                                            {% include 'components/price_display.html.twig' with {
                                                price: data.avg_price_unit,
                                                color: 'green',
                                                show_kamas: false
                                            } %}
                                            <div class="text-gray-500 text-xs">{{ data.price_unit_count }} obs</div>
                                        {% else %}
                                            <span class="text-gray-500">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if data.avg_price_10 %}
                                            {% include 'components/price_display.html.twig' with {
                                                price: data.avg_price_10,
                                                color: 'blue',
                                                show_kamas: false
                                            } %}
                                            <div class="text-gray-500 text-xs">{{ data.price_10_count }} obs</div>
                                        {% else %}
                                            <span class="text-gray-500">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if data.avg_price_100 %}
                                            {% include 'components/price_display.html.twig' with {
                                                price: data.avg_price_100,
                                                color: 'purple',
                                                show_kamas: false
                                            } %}
                                            <div class="text-gray-500 text-xs">{{ data.price_100_count }} obs</div>
                                        {% else %}
                                            <span class="text-gray-500">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-gray-300 text-sm">
                                        <div class="font-medium">{{ data.observation_count }} observations</div>
                                        <div class="text-gray-500 text-xs">
                                            {% if data.tracking_period_days > 0 %}
                                                sur {{ data.tracking_period_days }} jour{{ data.tracking_period_days > 1 ? 's' : '' }}
                                            {% else %}
                                                même jour
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <a href="{{ path('app_market_watch_history', {itemId: data.item.id}) }}" 
                                           class="text-blue-400 hover:text-blue-300">Voir historique</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Vue mobile -->
                <div class="lg:hidden space-y-4">
                    {% for data in items_data %}
                        <div class="wrapper-background">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <a href="{{ path('app_market_watch_history', {itemId: data.item.id}) }}" class="text-white font-medium hover:text-blue-400 transition-colors">
                                        {{ data.item.name }}
                                    </a>
                                    <p class="text-gray-400 text-sm">Niv.{{ data.item.level ?? 'N/A' }}</p>
                                </div>
                                <div class="text-right">
                                    <span class="bg-orange-600 text-orange-100 px-2 py-1 rounded-full text-xs">
                                        {{ data.observation_count }} obs
                                    </span>
                                    <div class="text-gray-400 text-xs mt-1">
                                        {% if data.tracking_period_days > 0 %}
                                            {{ data.tracking_period_days }}j
                                        {% else %}
                                            1j
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-2 mb-3 text-center">
                                <div class="bg-gray-700 rounded p-2">
                                    <div class="text-gray-400 text-xs">Moy. x1</div>
                                    {% if data.avg_price_unit %}
                                        {% include 'components/price_display.html.twig' with {
                                            price: data.avg_price_unit,
                                            size: 'small',
                                            color: 'green',
                                            show_kamas: false
                                        } %}
                                        <div class="text-gray-500 text-xs">{{ data.price_unit_count }}</div>
                                    {% else %}
                                        <div class="text-gray-500 text-sm">-</div>
                                    {% endif %}
                                </div>
                                <div class="bg-gray-700 rounded p-2">
                                    <div class="text-gray-400 text-xs">Moy. x10</div>
                                    {% if data.avg_price_10 %}
                                        {% include 'components/price_display.html.twig' with {
                                            price: data.avg_price_10,
                                            size: 'small',
                                            color: 'blue',
                                            show_kamas: false
                                        } %}
                                        <div class="text-gray-500 text-xs">{{ data.price_10_count }}</div>
                                    {% else %}
                                        <div class="text-gray-500 text-sm">-</div>
                                    {% endif %}
                                </div>
                                <div class="bg-gray-700 rounded p-2">
                                    <div class="text-gray-400 text-xs">Moy. x100</div>
                                    {% if data.avg_price_100 %}
                                        {% include 'components/price_display.html.twig' with {
                                            price: data.avg_price_100,
                                            size: 'small',
                                            color: 'purple',
                                            show_kamas: false
                                        } %}
                                        <div class="text-gray-500 text-xs">{{ data.price_100_count }}</div>
                                    {% else %}
                                        <div class="text-gray-500 text-sm">-</div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="text-center">
                                <a href="{{ path('app_market_watch_history', {itemId: data.item.id}) }}" 
                                   class="bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded text-sm transition-colors">
                                    Voir l'historique
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <p class="text-gray-400 text-lg mb-4">Aucune observation pour {{ selectedCharacter.name }}</p>
                    <a href="{{ path('app_market_watch_new') }}" 
                       class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg transition-colors">
                        Créer la première observation
                    </a>
                </div>
            {% endif %}
        {% else %}
            <!-- Aucun personnage sélectionné -->
            <div class="text-center py-12">
                <p class="text-gray-400 text-lg mb-4">Sélectionnez un personnage pour voir ses observations</p>
            </div>
        {% endif %}
    </div>
{% endblock %}