{% extends 'base.html.twig' %}

{% block title %}Vendre le lot - {{ lot_group.item.name }}{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Vendre le lot - ' ~ lot_group.item.name,
        'back_url': path('app_lot_index')
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <div class="max-w-2xl mx-auto grid gap-4 w-full">
            <!-- Informations du lot -->
            <div class="wrapper-background">
                <h2 class="text-white text-xl font-semibold mb-4">üì¶ Informations du lot</h2>
                <div class="stats-grid-2">
                    <div>
                        <div class="text-gray-400 text-sm">Item</div>
                        <div class="text-white font-medium">{{ lot_group.item.name }}</div>
                        <div class="text-gray-400 text-sm">Niv.{{ lot_group.item.level }}</div>
                    </div>
                    <div>
                        <div class="text-gray-400 text-sm">Stock disponible</div>
                        <div class="text-green-400 font-bold text-lg">{{ lot_group.lotSize }} lots</div>
                        <div class="text-gray-400 text-sm">Vente par {{ lot_group.saleUnit.value }}</div>
                    </div>
                    <div>
                        <div class="text-gray-400 text-sm">Personnage</div>
                        <div class="text-white font-medium">{{ lot_group.dofusCharacter.name }}</div>
                        <div class="text-gray-400 text-sm">{{ lot_group.dofusCharacter.server.name }}</div>
                    </div>
                    <div>
                        <div class="text-gray-400 text-sm">Prix pr√©vu</div>
                        <div class="text-white font-medium">{{ (lot_group.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                        <div class="text-gray-400 text-sm">par lot de {{ lot_group.saleUnit.value }}</div>
                    </div>
                </div>
            </div>

            <!-- Formulaire de vente -->
            <div class="wrapper-background">
                <h2 class="text-white text-xl font-semibold mb-4">üí∏ Enregistrer la vente</h2>
                {{ form_start(form) }}
                
                <!-- Quantit√© vendue -->
                <div class="mb-4">
                    {{ form_label(form.quantitySold, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                    {{ form_widget(form.quantitySold) }}
                    {{ form_errors(form.quantitySold) }}
                    <div class="form-help">
                        Stock disponible : {{ lot_group.lotSize }} lots
                    </div>
                </div>

                <!-- Prix de vente r√©el -->
                <div class="mb-4">
                    {{ form_label(form.actualSellPrice, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                    {{ form_widget(form.actualSellPrice) }}
                    {{ form_errors(form.actualSellPrice) }}
                    <div class="form-help">
                        Prix pr√©vu : {{ (lot_group.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k
                    </div>
                </div>

                <!-- Notes -->
                <div class="mb-6">
                    {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                    {{ form_widget(form.notes) }}
                    {{ form_errors(form.notes) }}
                    <div class="form-help">
                        Ex: "Vendu rapidement", "Prix du march√© plus bas", etc.
                    </div>
                </div>

                <!-- Aper√ßu du profit (JavaScript) -->
                <div id="profit-preview" class="mb-6 p-4 bg-gray-700 rounded-lg" style="display: none;">
                    <div class="text-gray-400 text-sm mb-2">üìä Calcul de la vente</div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <div class="text-white font-medium">Quantit√©</div>
                            <div id="quantity-display" class="text-blue-400"></div>
                        </div>
                        <div>
                            <div class="text-white font-medium">Profit total</div>
                            <div id="total-profit" class="text-green-400"></div>
                        </div>
                    </div>
                    <div id="remaining-stock" class="text-yellow-400 text-sm mt-2"></div>
                </div>

                {% include 'components/action_buttons.html.twig' with {
                    submit_text: 'Confirmer la vente',
                    submit_icon: '‚úÖ',
                    submit_color: 'success',
                    cancel_url: path('app_lot_index'),
                    cancel_icon: '‚ùå',
                } %}

                {{ form_end(form) }}
            </div>
        </div>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const quantityInput = document.getElementById('lot_unit_quantitySold');
    const priceInput = document.getElementById('lot_unit_actualSellPrice');
    const profitPreview = document.getElementById('profit-preview');
    
    const buyPrice = {{ lot_group.buyPricePerLot }};
    const totalStock = {{ lot_group.lotSize }};
    
    function updatePreview() {
        const quantity = parseInt(quantityInput.value) || 0;
        const price = parseInt(priceInput.value) || 0;
        
        if (quantity > 0 && price > 0) {
            profitPreview.style.display = 'block';
            
            const totalProfit = (price - buyPrice) * quantity;
            const remaining = totalStock - quantity;
            
            document.getElementById('quantity-display').textContent = `${quantity} lots`;
            document.getElementById('total-profit').textContent = `${(totalProfit / 1000).toLocaleString()}k`;
            
            if (remaining > 0) {
                document.getElementById('remaining-stock').textContent = `Il restera ${remaining} lots en stock`;
            } else {
                document.getElementById('remaining-stock').textContent = 'Lot enti√®rement vendu';
            }
        } else {
            profitPreview.style.display = 'none';
        }
    }
    
    quantityInput.addEventListener('input', updatePreview);
    priceInput.addEventListener('input', updatePreview);
    updatePreview(); // Calcul initial
});
</script>
{% endblock %}