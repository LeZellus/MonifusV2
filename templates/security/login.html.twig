{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <div class="max-w-md mx-auto wrapper-background w-full">
            <div class="text-center mb-6">
                <h1 class="text-white text-2xl font-bold">Se connecter</h1>
                <p class="text-gray-400 mt-2">Accédez à votre espace trading</p>
            </div>

            {% if error %}
                <div class="bg-red-600 text-white p-3 rounded-lg mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="bg-green-600 text-white p-3 rounded-lg mb-4">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                    <a href="{{ path('app_logout') }}" class="underline ml-2">Se déconnecter</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-4">
                    <label for="username" class="block text-white font-medium mb-2">Email</label>
                    <input type="email" 
                           value="{{ last_username }}" 
                           name="_username" 
                           id="username" 
                           class="w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white rounded-md focus:outline-none focus:border-blue-500" 
                           autocomplete="email" 
                           required 
                           autofocus>
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-white font-medium mb-2">Mot de passe</label>
                    <input type="password" 
                           name="_password" 
                           id="password" 
                           class="w-full px-3 py-2 border border-gray-600 bg-gray-700 text-white rounded-md focus:outline-none focus:border-blue-500" 
                           autocomplete="current-password" 
                           required>
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                    Se connecter
                </button>
            </form>

            <div class="text-center mt-6">
                <p class="text-gray-400">
                    Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="text-blue-400 hover:text-blue-300">Créer un compte</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}