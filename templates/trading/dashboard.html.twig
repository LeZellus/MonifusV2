{% extends 'base.html.twig' %}

{% block title %}Dashboard Trading{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <h1 class="text-white text-xl font-bold">Trading Dashboard</h1>
                <div class="flex space-x-4">
                    <a href="{{ path('app_backup_index') }}" class="text-gray-300 hover:text-white">üíæ Sauvegarde</a>
                    <a href="{{ path('app_settings_index') }}" class="text-gray-300 hover:text-white">‚öôÔ∏è Param√®tres</a>
                    <span class="text-gray-300">{{ user.pseudonymeWebsite ?? user.email }}</span>
                    <a href="{{ path('app_logout') }}" class="text-red-400 hover:text-red-300">D√©connexion</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-gray-800 rounded-lg p-6">
                <h3 class="text-white text-lg font-semibold mb-2">Profils</h3>
                <p class="text-blue-400 text-2xl font-bold">{{ trading_profiles_count }}</p>
            </div>
            <div class="bg-gray-800 rounded-lg p-6">
                <h3 class="text-white text-lg font-semibold mb-2">Personnages</h3>
                <p class="text-green-400 text-2xl font-bold">{{ stats.charactersCount }}</p>
            </div>
            <div class="bg-gray-800 rounded-lg p-6">
                <h3 class="text-white text-lg font-semibold mb-2">Lots Total</h3>
                <p class="text-purple-400 text-2xl font-bold">{{ stats.global.totalLots }}</p>
                <p class="text-gray-400 text-sm">{{ stats.global.availableLots }} dispo ‚Ä¢ {{ stats.global.soldLots }} vendus</p>
            </div>
            <div class="bg-gray-800 rounded-lg p-6">
                <h3 class="text-white text-lg font-semibold mb-2">Profit Total</h3>
                <p class="text-green-400 text-2xl font-bold">
                    {{ ((stats.global.realizedProfit + stats.global.potentialProfit) / 1000000)|number_format(1) }}M
                </p>
                <p class="text-gray-400 text-sm">
                    {{ (stats.global.realizedProfit / 1000000)|number_format(1) }}M r√©alis√©
                </p>
            </div>
        </div>

        <!-- Notifications -->
        {% if notifications|length > 0 %}
            <div class="mb-8">
                <h3 class="text-white text-xl font-semibold mb-4">üîî Notifications</h3>
                <div class="space-y-3">
                    {% for notification in notifications %}
                        <div class="bg-gray-800 border-l-4 border-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-500 rounded-lg p-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <span class="text-2xl">{{ notification.icon }}</span>
                                    <div>
                                        <h4 class="text-white font-medium">{{ notification.title }}</h4>
                                        <p class="text-gray-300 text-sm">{{ notification.message }}</p>
                                    </div>
                                </div>
                                <a href="{{ notification.link }}" 
                                class="bg-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-600 hover:bg-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                    {{ notification.action }}
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <a href="{{ path('app_trading_lots') }}" 
            class="bg-blue-600 hover:bg-blue-700 text-white p-6 rounded-lg text-center transition-colors block">
                <h3 class="text-xl font-bold mb-2">Mon Trading</h3>
                <p class="text-blue-100">G√©rer mes lots et ventes</p>
            </a>
            <a href="{{ path('app_trading_surveillance') }}" 
            class="bg-green-600 hover:bg-green-700 text-white p-6 rounded-lg text-center transition-colors block">
                <h3 class="text-xl font-bold mb-2">Surveillance</h3>
                <p class="text-green-100">Surveiller les prix du march√©</p>
            </a>
            <a href="{{ path('app_analytics_index') }}" 
            class="bg-purple-600 hover:bg-purple-700 text-white p-6 rounded-lg text-center transition-colors block">
                <h3 class="text-xl font-bold mb-2">Analytics</h3>
                <p class="text-purple-100">Analyser mes performances</p>
            </a>
            <a href="{{ path('app_sales_history_index') }}" 
            class="bg-orange-600 hover:bg-orange-700 text-white p-6 rounded-lg text-center transition-colors block">
                <h3 class="text-xl font-bold mb-2">Historique</h3>
                <p class="text-orange-100">Ventes r√©alis√©es</p>
            </a>
        </div>

        <!-- Actions rapides -->
        <div class="mb-8">
            <h3 class="text-white text-xl font-semibold mb-4">‚ö° Actions Rapides</h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {% if stats.charactersCount > 0 %}
                    <a href="{{ path('app_lot_new', {id: 1}) }}" 
                    class="bg-gray-700 hover:bg-gray-600 text-white p-3 rounded-lg text-center transition-colors">
                        <div class="text-lg mb-1">‚ûï</div>
                        <div class="text-sm">Ajouter Lot</div>
                    </a>
                    <a href="{{ path('app_market_watch_new', {id: 1}) }}" 
                    class="bg-gray-700 hover:bg-gray-600 text-white p-3 rounded-lg text-center transition-colors">
                        <div class="text-lg mb-1">üëÅÔ∏è</div>
                        <div class="text-sm">Surveiller Prix</div>
                    </a>
                {% endif %}
                <a href="{{ path('app_profile_new') }}" 
                class="bg-gray-700 hover:bg-gray-600 text-white p-3 rounded-lg text-center transition-colors">
                    <div class="text-lg mb-1">üë§</div>
                    <div class="text-sm">Nouveau Profil</div>
                </a>
                {% if stats.global.availableLots > 0 %}
                    <a href="{{ path('app_lot_index') }}" 
                    class="bg-gray-700 hover:bg-gray-600 text-white p-3 rounded-lg text-center transition-colors">
                        <div class="text-lg mb-1">üí∏</div>
                        <div class="text-sm">Vendre Lots</div>
                    </a>
                {% endif %}
            </div>
        </div>

        <!-- Performance de la semaine -->
        {% if quick_stats.weekSalesCount > 0 %}
            <div class="mb-8">
                <h3 class="text-white text-xl font-semibold mb-4">üèÜ Performance de la semaine</h3>
                <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-6 mb-8">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-white">
                        <div class="text-center">
                            <div class="text-2xl font-bold">{{ quick_stats.weekSalesCount }}</div>
                            <div class="text-blue-100 text-sm">ventes r√©alis√©es</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold">{{ (quick_stats.weekProfit / 1000000)|number_format(1) }}M</div>
                            <div class="text-blue-100 text-sm">profit total</div>
                        </div>
                        <div class="text-center">
                            <div class="text-lg font-medium">{{ quick_stats.bestItem }}</div>
                            <div class="text-blue-100 text-sm">meilleur item (+{{ (quick_stats.bestItemProfit / 1000)|number_format(0, ',', ' ') }}k)</div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="mb-8 mx-auto mt-6">
            <a href="{{ path('app_profile_index') }}" 
            class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
                G√©rer mes profils
            </a>
        </div>
    </div>
</div>
{% endblock %}