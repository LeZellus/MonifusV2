{% extends 'base.html.twig' %}

{% block title %}Dashboard Trading{% endblock %}

{% block body %}

{% include 'components/profile_selector.html.twig' %}

<div class="wrapper-container">
    <!-- Statistiques globales -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {% include 'components/stats_card.html.twig' with {
            title: 'Profils',
            value: trading_profiles_count,
            color: 'blue'
        } %}
        {% include 'components/stats_card.html.twig' with {
            title: 'Personnages', 
            value: stats.charactersCount,
            color: 'green'
        } %}
        {% include 'components/stats_card.html.twig' with {
            title: 'Lots Total',
            value: stats.global.totalLots,
            subtitle: stats.global.availableLots ~ ' dispo ‚Ä¢ ' ~ stats.global.soldLots ~ ' vendus',
            color: 'purple'
        } %}
        {% include 'components/stats_card.html.twig' with {
            title: 'Profit Potentiel',
            value: ((stats.global.realizedProfit + stats.global.potentialProfit) / 1000000)|number_format(1) ~ 'M',
            subtitle: (stats.global.realizedProfit / 1000000)|number_format(1) ~ 'M r√©alis√©',
            color: 'green'
        } %}
    </div>

    <!-- Notifications -->
    {% if notifications|length > 0 %}
        <div class="grid gap-4">
            <h3 class="text-white text-xl font-semibold">üîî Notifications</h3>
            <div class="space-y-3">
                {% for notification in notifications %}
                    <div class="bg-gray-800 border-l-4 border-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-500 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-3">
                                <span class="text-2xl">{{ notification.icon }}</span>
                                <div>
                                    <h4 class="text-white font-medium">{{ notification.title }}</h4>
                                    <p class="text-gray-300 text-sm">{{ notification.message }}</p>
                                </div>
                            </div>
                            <a href="{{ notification.link }}" 
                            class="bg-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-600 hover:bg-{{ notification.type == 'success' ? 'green' : (notification.type == 'warning' ? 'yellow' : 'blue') }}-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                {{ notification.action }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Actions principales -->
    <div class="stats-grid text-white">
        <a href="{{ path('app_profile_index') }}" class="btn-primary btn-with-icon">
            <h3 class="text-xl font-bold mb-2">üë• Profils</h3>
            <p class="text-blue-200">G√©rer personnages et s√©lection</p>
        </a>
        <a href="{{ path('app_trading_lots') }}" class="btn-success btn-with-icon">
            <h3 class="text-xl font-bold mb-2">üì¶ Mon Trading</h3>
            <p class="text-green-200">G√©rer mes lots et ventes</p>
        </a>
        <a href="{{ path('app_trading_surveillance') }}" class="btn-warning btn-with-icon">
            <h3 class="text-xl font-bold mb-2">üëÅÔ∏è Surveillance</h3>
            <p class="text-orange-200">Surveiller les prix du march√©</p>
        </a>
        <a href="{{ path('app_analytics_index') }}" class="btn-purple btn-with-icon">
            <h3 class="text-xl font-bold mb-2">üìä Analytics</h3>
            <p class="text-purple-200">Analyser mes performances</p>
        </a>
    </div>

    <!-- Performance de la semaine -->
    {% if quick_stats.weekSalesCount > 0 %}
        <div class="space-content">
            <h3 class="page-title">üèÜ Performance de la semaine</h3>
            <div class="gradient-primary card">
                <div class="stats-grid-3 text-white">
                    <div class="text-center">
                        <div class="stats-value-lg">{{ quick_stats.weekSalesCount }}</div>
                        <div class="text-blue-100 text-sm">ventes r√©alis√©es</div>
                    </div>
                    <div class="text-center">
                        <div class="stats-value-lg">{{ (quick_stats.weekProfit / 1000000)|number_format(1) }}M</div>
                        <div class="text-blue-100 text-sm">profit total</div>
                    </div>
                    <div class="text-center">
                        <div class="text-lg font-medium">{{ quick_stats.bestItem }}</div>
                        <div class="text-blue-100 text-sm">meilleur item (+{{ (quick_stats.bestItemProfit / 1000)|number_format(0, ',', ' ') }}k)</div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}