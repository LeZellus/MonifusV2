<!-- templates/lot/_form.html.twig -->
<div class="max-w-2xl mx-auto">
    <!-- En-t√™te avec info personnage -->
        {% include 'components/character_info_header.html.twig' with {
        character: character,
        action_title: 'Nouveau Lot',
        action_description: 'Ajouter un item au trading',
        action_color: 'green',
        action_icon: 'üì¶'
    } %}

    {% if is_edit %}
        <!-- Informations actuelles du lot -->
        <div class="wrapper-background mb-6">
            <h3 class="text-white font-semibold mb-3 flex items-center">
                <span class="mr-2">üìä</span>
                Informations actuelles
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-gray-700 rounded-lg p-3 text-center">
                    <div class="text-gray-400 text-sm">Quantit√©</div>
                    <div class="text-white text-lg font-bold">{{ lot.lotSize }}</div>
                    <div class="text-gray-400 text-xs">lots</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-3 text-center">
                    <div class="text-gray-400 text-sm">Prix achat</div>
                    <div class="text-red-400 text-lg font-bold">{{ (lot.buyPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                    <div class="text-gray-400 text-xs">par lot</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-3 text-center">
                    <div class="text-gray-400 text-sm">Prix vente</div>
                    <div class="text-green-400 text-lg font-bold">{{ (lot.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                    <div class="text-gray-400 text-xs">par lot</div>
                </div>
                <div class="bg-gray-700 rounded-lg p-3 text-center">
                    <div class="text-gray-400 text-sm">Profit total</div>
                    {% include 'components/profit_display.html.twig' with {
                        buy_price: lot.buyPricePerLot,
                        sell_price: lot.sellPricePerLot,
                        quantity: lot.lotSize
                    } %}
                </div>
            </div>
        </div>
    {% endif %}

    {% set form_content %}
        <div data-controller="profit-calculator">
            {{ form_start(form) }}
                <div class="form-grid">
                    <!-- Item avec autocompl√©tion ou lecture seule -->
                    {% if is_edit %}
                        <div class="md:col-span-2">
                            <label class="form-label">Item s√©lectionn√©</label>
                            <div class="w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold">
                                        {{ lot.item.name|first|upper }}
                                    </div>
                                    <div>
                                        {% include 'components/item_display.html.twig' with {item: lot.item} %}
                                    </div>
                                </div>
                                <div class="bg-gray-600 text-gray-300 px-3 py-1 rounded-full text-sm flex items-center">
                                    <span class="mr-1">üîí</span>
                                    Fix√©
                                </div>
                            </div>
                            {{ form_widget(form.item, {'attr': {'style': 'display: none;'}}) }}
                            {{ form_errors(form.item) }}
                            <div class="form-help">üí° L'item ne peut pas √™tre modifi√© apr√®s cr√©ation</div>
                        </div>
                    {% else %}
                        <div class="md:col-span-2 relative" data-controller="autocomplete" data-autocomplete-url-value="{{ path('api_items_search') }}">
                            {{ form_label(form.itemSearch, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.itemSearch, {'attr': {'class': 'form-input-lg', 'placeholder': 'Tapez pour rechercher un item...', 'data-autocomplete-target': 'input', 'data-action': 'input->autocomplete#search'}}) }}
                            
                            <div data-autocomplete-target="results" 
                                data-action="click->autocomplete#selectItem"
                                class="absolute z-10 w-full bg-gray-800 border border-gray-600 rounded-md shadow-lg hidden max-h-60 overflow-y-auto mt-1">
                            </div>

                            {{ form_widget(form.item, {'attr': {'style': 'display: none;', 'data-autocomplete-target': 'hiddenId'}}) }}
                            {{ form_errors(form.item) }}
                            
                            <div class="form-help">üîç Tapez pour rechercher et s√©lectionner un item</div>
                        </div>
                    {% endif %}

                    <!-- Configuration du lot -->
                    <div>
                        {{ form_label(form.lotSize, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="relative">
                            {{ form_widget(form.lotSize, {'attr': {
                                'class': 'form-input-lg', 
                                'placeholder': 'ex: 100',
                                'data-profit-calculator-target': 'lotSize',
                                'data-action': 'input->profit-calculator#updateProfit'
                            }}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">lots</span>
                            </div>
                        </div>
                        {{ form_errors(form.lotSize) }}
                        <div class="form-help">üìä Quantit√© totale √† trader</div>
                    </div>

                    <div>
                        {{ form_label(form.saleUnit, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.saleUnit, {'attr': {'class': 'form-input-lg'}}) }}
                        {{ form_errors(form.saleUnit) }}
                        <div class="form-help">üéØ Comment vous vendez sur Dofus</div>
                    </div>

                    <!-- Prix -->
                    <div>
                        {{ form_label(form.buyPricePerLot, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="relative">
                            {{ form_widget(form.buyPricePerLot, {'attr': {
                                'class': 'form-input-lg form-input-danger', 
                                'placeholder': '1000',
                                'data-profit-calculator-target': 'buyPrice',
                                'data-action': 'input->profit-calculator#updateProfit'
                            }}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">kamas</span>
                            </div>
                        </div>
                        {{ form_errors(form.buyPricePerLot) }}
                        <div class="text-red-400 text-sm mt-1">üí∏ Prix pay√© pour acheter</div>
                    </div>

                    <div>
                        {{ form_label(form.sellPricePerLot, null, {'label_attr': {'class': 'form-label'}}) }}
                        <div class="relative">
                            {{ form_widget(form.sellPricePerLot, {'attr': {
                                'class': 'form-input-lg form-input-success', 
                                'placeholder': '1200',
                                'data-profit-calculator-target': 'sellPrice',
                                'data-action': 'input->profit-calculator#updateProfit'
                            }}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">kamas</span>
                            </div>
                        </div>
                        {{ form_errors(form.sellPricePerLot) }}
                        <div class="text-green-400 text-sm mt-1">üí∞ Prix de vente souhait√©</div>
                    </div>

                    <!-- Statut -->
                    <div class="md:col-span-2">
                        {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-input-lg'}}) }}
                        {{ form_errors(form.status) }}
                        <div class="form-help">üìã {{ is_edit ? 'Statut du lot' : 'Statut initial du lot' }}</div>
                    </div>
                </div>

                <!-- Aper√ßu du profit -->
                <div class="mt-6 info-box-primary">
                    <h4 class="info-title">
                        <span>üí°</span>
                        {{ is_edit ? 'Nouveau calcul de profit' : 'Aper√ßu du profit' }}
                    </h4>
                    <div class="stats-grid-3 text-center">
                        <!-- contenu -->
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-8">
                    {% include 'components/action_buttons.html.twig' with {
                        submit_text: is_edit ? 'Sauvegarder les modifications' : 'Cr√©er le lot',
                        submit_icon: is_edit ? 'üíæ' : '‚úÖ',
                        submit_color: is_edit ? 'primary' : 'success',
                        cancel_url: path('app_lot_index'),
                        cancel_icon: '‚ùå'
                    } %}
                </div>
            {{ form_end(form) }}
        </div>
    {% endset %}

    {% include 'components/form_section.html.twig' with {
        title: is_edit ? 'Modifier les informations' : 'Informations du lot',
        icon: is_edit ? 'üîÑ' : 'üìù',
        content: form_content
    } %}

    <!-- Formulaire principal -->
    <div class="wrapper-background" data-controller="profit-calculator">
        <h3 class="text-white text-lg font-semibold mb-6 flex items-center">
            <span class="text-2xl mr-3">{{ is_edit ? 'üîÑ' : 'üìù' }}</span>
            {{ is_edit ? 'Modifier les informations' : 'Informations du lot' }}
        </h3>

        {{ form_start(form) }}
        
        

        {{ form_end(form) }}
    </div>
</div>