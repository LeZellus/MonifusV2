{% extends 'base.html.twig' %}

{% block title %}Modifier le lot - {{ lot.item.name }}{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Modifier le lot - ' ~ lot.item.name,
        'back_url': path('app_lot_index')
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <div class="max-w-2xl mx-auto">
            <!-- En-t√™te avec info lot -->
            <div class="wrapper-background mb-6">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 rounded-full overflow-hidden">
                        <img src="{{ lot.dofusCharacter.classe.imagePath }}" 
                            alt="{{ lot.dofusCharacter.classe.name }}" 
                            class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h2 class="text-white text-xl font-semibold">{{ lot.item.name }}</h2>
                        <p class="text-gray-400">{{ lot.dofusCharacter.classe.name }} ‚Ä¢ {{ lot.dofusCharacter.server.name }}</p>
                    </div>
                    <div class="ml-auto text-right">
                        <div class="text-blue-400 font-semibold">üìù Modifier le Lot</div>
                        <div class="text-gray-400 text-sm">{{ lot.dofusCharacter.name }}</div>
                    </div>
                </div>
            </div>

            <!-- Informations actuelles du lot -->
            <div class="wrapper-background mb-6">
                <h3 class="text-white font-semibold mb-3 flex items-center">
                    <span class="mr-2">üìä</span>
                    Informations actuelles
                </h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="bg-gray-700 rounded-lg p-3 text-center">
                        <div class="text-gray-400 text-sm">Quantit√©</div>
                        <div class="text-white text-lg font-bold">{{ lot.lotSize }}</div>
                        <div class="text-gray-400 text-xs">lots</div>
                    </div>
                    <div class="bg-gray-700 rounded-lg p-3 text-center">
                        <div class="text-gray-400 text-sm">Prix achat</div>
                        <div class="text-red-400 text-lg font-bold">{{ (lot.buyPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                        <div class="text-gray-400 text-xs">par lot</div>
                    </div>
                    <div class="bg-gray-700 rounded-lg p-3 text-center">
                        <div class="text-gray-400 text-sm">Prix vente</div>
                        <div class="text-green-400 text-lg font-bold">{{ (lot.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                        <div class="text-gray-400 text-xs">par lot</div>
                    </div>
                    <div class="bg-gray-700 rounded-lg p-3 text-center">
                        <div class="text-gray-400 text-sm">Profit total</div>
                        {% set totalProfit = (lot.sellPricePerLot - lot.buyPricePerLot) * lot.lotSize %}
                        <div class="text-{{ totalProfit >= 0 ? 'green' : 'red' }}-400 text-lg font-bold">{{ (totalProfit / 1000)|number_format(0, ',', ' ') }}k</div>
                        {% set profitPercent = lot.buyPricePerLot > 0 ? ((lot.sellPricePerLot - lot.buyPricePerLot) / lot.buyPricePerLot * 100) : 0 %}
                        <div class="text-gray-400 text-xs">({{ profitPercent|number_format(1) }}%)</div>
                    </div>
                </div>
            </div>

            <!-- Formulaire de modification -->
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-6 flex items-center">
                    <span class="text-2xl mr-3">üîÑ</span>
                    Modifier les informations
                </h3>

                {{ form_start(form) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Item (affichage stylis√© lecture seule) -->
                    <div class="md:col-span-2">
                        <label class="block text-white font-medium mb-2">Item s√©lectionn√©</label>
                        <div class="w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg flex items-center justify-between">
                            <div class="flex items-center space-x-3">
                                <!-- Avatar de l'item -->
                                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold">
                                    {{ lot.item.name|first|upper }}
                                </div>
                                <!-- Infos de l'item -->
                                <div>
                                    <div class="text-white font-medium">{{ lot.item.name }}</div>
                                    {% if lot.item.level %}
                                        <div class="text-gray-400 text-sm">Niveau {{ lot.item.level }}</div>
                                    {% endif %}
                                    {% if lot.item.itemType %}
                                        <div class="text-blue-400 text-xs">{{ lot.item.itemType.value }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- Badge verrouill√© -->
                            <div class="bg-gray-600 text-gray-300 px-3 py-1 rounded-full text-sm flex items-center">
                                <span class="mr-1">üîí</span>
                                Fix√©
                            </div>
                        </div>
                        <!-- Champ cach√© pour Symfony -->
                        {{ form_widget(form.item, {'attr': {'style': 'display: none;'}}) }}
                        {{ form_errors(form.item) }}
                        <div class="text-gray-400 text-sm mt-1">üí° L'item ne peut pas √™tre modifi√© apr√®s cr√©ation</div>
                    </div>

                    <!-- Configuration du lot -->
                    <div>
                        {{ form_label(form.lotSize, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.lotSize, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20'}}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">lots</span>
                            </div>
                        </div>
                        {{ form_errors(form.lotSize) }}
                        <div class="text-gray-400 text-sm mt-1">üìä Quantit√© totale √† trader</div>
                    </div>

                    <div>
                        {{ form_label(form.saleUnit, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        {{ form_widget(form.saleUnit, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20'}}) }}
                        {{ form_errors(form.saleUnit) }}
                        <div class="text-gray-400 text-sm mt-1">üéØ Comment vous vendez sur Dofus</div>
                    </div>

                    <!-- Prix -->
                    <div>
                        {{ form_label(form.buyPricePerLot, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.buyPricePerLot, {'attr': {'class': 'w-full px-4 py-3 pr-12 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500 focus:ring-opacity-20'}}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">kamas</span>
                            </div>
                        </div>
                        {{ form_errors(form.buyPricePerLot) }}
                        <div class="text-red-400 text-sm mt-1">üí∏ Prix pay√© pour acheter</div>
                    </div>

                    <div>
                        {{ form_label(form.sellPricePerLot, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.sellPricePerLot, {'attr': {'class': 'w-full px-4 py-3 pr-12 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:ring-opacity-20'}}) }}
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <span class="text-gray-400 text-sm">kamas</span>
                            </div>
                        </div>
                        {{ form_errors(form.sellPricePerLot) }}
                        <div class="text-green-400 text-sm mt-1">üí∞ Prix de vente souhait√©</div>
                    </div>

                    <!-- Statut -->
                    <div class="md:col-span-2">
                        {{ form_label(form.status, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                        {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20'}}) }}
                        {{ form_errors(form.status) }}
                        <div class="text-gray-400 text-sm mt-1">üìã Statut du lot</div>
                    </div>
                </div>

                <!-- Aper√ßu du profit mis √† jour -->
                <div class="mt-6 bg-gradient-to-r from-blue-600 to-green-600 rounded-lg p-4">
                    <h4 class="text-white font-semibold mb-2">üí° Nouveau calcul de profit</h4>
                    <div class="grid grid-cols-3 gap-4 text-center">
                        <div>
                            <div class="text-blue-200 text-sm">Investissement</div>
                            <div id="investment" class="text-white font-bold">-</div>
                        </div>
                        <div>
                            <div class="text-green-200 text-sm">Profit par lot</div>
                            <div id="profit-per-lot" class="text-white font-bold">-</div>
                        </div>
                        <div>
                            <div class="text-yellow-200 text-sm">Profit total</div>
                            <div id="total-profit" class="text-white font-bold">-</div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-4 mt-8">
                    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors flex items-center justify-center">
                        <span class="mr-2">üíæ</span>
                        Sauvegarder les modifications
                    </button>
                    <a href="{{ path('app_lot_index') }}" 
                       class="flex-1 bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg transition-colors text-center flex items-center justify-center">
                        <span class="mr-2">‚ùå</span>
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const lotSizeInput = document.getElementById('lot_group_lotSize');
        const buyPriceInput = document.getElementById('lot_group_buyPricePerLot');
        const sellPriceInput = document.getElementById('lot_group_sellPricePerLot');
        
        function updateProfit() {
            const lotSize = parseInt(lotSizeInput.value) || 0;
            const buyPrice = parseInt(buyPriceInput.value) || 0;
            const sellPrice = parseInt(sellPriceInput.value) || 0;
            
            const investment = lotSize * buyPrice;
            const profitPerLot = sellPrice - buyPrice;
            const totalProfit = lotSize * profitPerLot;
            
            document.getElementById('investment').textContent = investment > 0 ? (investment / 1000).toLocaleString() + 'k' : '-';
            document.getElementById('profit-per-lot').textContent = profitPerLot !== 0 ? (profitPerLot / 1000).toLocaleString() + 'k' : '-';
            document.getElementById('total-profit').textContent = totalProfit !== 0 ? (totalProfit / 1000).toLocaleString() + 'k' : '-';
        }
        
        [lotSizeInput, buyPriceInput, sellPriceInput].forEach(input => {
            if (input) input.addEventListener('input', updateProfit);
        });
        
        // Calcul initial
        updateProfit();
    });
    </script>
{% endblock %}