{% extends 'base.html.twig' %}

{% block title %}Mes Lots de Trading{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <h1 class="text-white text-xl font-bold">Mes Lots de Trading</h1>
                <a href="{{ path('app_trading_dashboard') }}" class="text-blue-400 hover:text-blue-300">← Dashboard</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <!-- Sélecteur de personnage -->
        {% include 'components/character_selector.html.twig' %}

        {% if selectedCharacter %}
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-white text-2xl font-bold">
                    Lots de {{ selectedCharacter.name }}
                </h2>
                <a href="{{ path('app_lot_new') }}" 
                   class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors">
                    + Nouveau lot
                </a>
            </div>

            {% if lots|length > 0 %}
                <!-- Vue desktop -->
                <div class="hidden md:block bg-gray-800 rounded-lg overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-700">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Item</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Configuration</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Prix Achat</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Prix Vente</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Profit</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Statut</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-700">
                            {% for lot in lots %}
                                {% set profit = lot.sellPricePerLot - lot.buyPricePerLot %}
                                {% set profitPercent = lot.buyPricePerLot > 0 ? (profit / lot.buyPricePerLot * 100) : 0 %}
                                <tr class="hover:bg-gray-700">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-white font-medium">{{ lot.item.name }}</div>
                                        <div class="text-gray-400 text-sm">Niv.{{ lot.item.level }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-white font-medium">{{ lot.lotSize }} lots</div>
                                        <div class="text-gray-400 text-sm">
                                            Vente par {{ lot.saleUnit.value }}
                                            {% if lot.saleUnit.value == 1 %}
                                                (unité)
                                            {% elseif lot.saleUnit.value == 10 %}
                                                (x10)
                                            {% else %}
                                                (x100)
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-white">{{ (lot.buyPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                                        <div class="text-gray-400 text-sm">par lot de {{ lot.saleUnit.value }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-white">{{ (lot.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k</div>
                                        <div class="text-gray-400 text-sm">par lot de {{ lot.saleUnit.value }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-{{ profit >= 0 ? 'green' : 'red' }}-400 font-medium">
                                            {{ (profit / 1000)|number_format(0, ',', ' ') }}k
                                        </div>
                                        <div class="text-{{ profit >= 0 ? 'green' : 'red' }}-400 text-sm">
                                            ({{ profitPercent|number_format(1) }}%)
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                {{ lot.status.value == 'available' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' }}">
                                            {{ lot.status.value == 'available' ? 'Disponible' : 'Vendu' }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <div class="flex space-x-2">
                                            {% if lot.status.value == 'available' %}
                                                <a href="{{ path('app_lot_sell', {id: lot.id}) }}" 
                                                class="text-green-400 hover:text-green-300">Vendre</a>
                                            {% endif %}
                                            <a href="{{ path('app_lot_edit', {id: lot.id}) }}" 
                                            class="text-blue-400 hover:text-blue-300">Modifier</a>
                                            <form action="{{ path('app_lot_delete', {id: lot.id}) }}" method="post" 
                                                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lot ?')" class="inline">
                                                <button type="submit" class="text-red-400 hover:text-red-300">Supprimer</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Vue mobile -->
                <div class="md:hidden space-y-4">
                    {% for lot in lots %}
                        {% set profit = lot.sellPricePerLot - lot.buyPricePerLot %}
                        {% set profitPercent = lot.buyPricePerLot > 0 ? (profit / lot.buyPricePerLot * 100) : 0 %}
                        <div class="bg-gray-800 rounded-lg p-4">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <h3 class="text-white font-medium">{{ lot.item.name }}</h3>
                                    <p class="text-gray-400 text-sm">Niv.{{ lot.item.level }}</p>
                                </div>
                                <span class="px-2 py-1 text-xs rounded-full {{ lot.status.value == 'available' ? 'bg-green-600 text-green-100' : 'bg-gray-600 text-gray-100' }}">
                                    {{ lot.status.value == 'available' ? 'Dispo' : 'Vendu' }}
                                </span>
                            </div>

                            <div class="grid grid-cols-2 gap-4 mb-3">
                                <div>
                                    <p class="text-gray-400 text-xs">Configuration</p>
                                    <p class="text-white text-sm">{{ lot.lotSize }} lots</p>
                                    <p class="text-gray-400 text-xs">par {{ lot.saleUnit.value }}</p>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-xs">Profit</p>
                                    <p class="text-{{ profit >= 0 ? 'green' : 'red' }}-400 text-sm font-medium">
                                        {{ (profit / 1000)|number_format(0, ',', ' ') }}k
                                    </p>
                                    <p class="text-{{ profit >= 0 ? 'green' : 'red' }}-400 text-xs">
                                        ({{ profitPercent|number_format(1) }}%)
                                    </p>
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-2 mb-3 text-center">
                                <div>
                                    <p class="text-gray-400 text-xs">Achat</p>
                                    <p class="text-white text-sm">{{ (lot.buyPricePerLot / 1000)|number_format(0, ',', ' ') }}k</p>
                                </div>
                                <div>
                                    <p class="text-gray-400 text-xs">Vente</p>
                                    <p class="text-white text-sm">{{ (lot.sellPricePerLot / 1000)|number_format(0, ',', ' ') }}k</p>
                                </div>
                            </div>

                            <div class="flex space-x-2">
                                {% if lot.status.value == 'available' %}
                                    <a href="{{ path('app_lot_sell', {id: lot.id}) }}" 
                                    class="flex-1 bg-green-600 hover:bg-green-700 text-white text-center py-2 rounded text-sm transition-colors">
                                        Vendre
                                    </a>
                                {% endif %}
                                <a href="{{ path('app_lot_edit', {id: lot.id}) }}" 
                                class="flex-1 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 rounded text-sm transition-colors">
                                    Modifier
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <p class="text-gray-400 text-lg mb-4">Aucun lot pour {{ selectedCharacter.name }}</p>
                    <a href="{{ path('app_lot_new') }}" 
                       class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition-colors">
                        Créer le premier lot
                    </a>
                </div>
            {% endif %}
        {% else %}
            <!-- Aucun personnage sélectionné -->
            <div class="text-center py-12">
                <p class="text-gray-400 text-lg mb-4">Sélectionnez un personnage pour voir ses lots</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}