{% extends 'base.html.twig' %}

{% block title %}Nouveau Lot - {{ character.name }}{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <h1 class="text-white text-xl font-bold">Nouveau Lot - {{ character.name }}</h1>
                <a href="{{ path('app_lot_index') }}" class="text-blue-400 hover:text-blue-300">← Retour</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="max-w-md mx-auto bg-gray-800 rounded-lg p-6">
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_label(form.item, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.item) }}
                {{ form_errors(form.item) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.lotSize, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.lotSize) }}
                {{ form_errors(form.lotSize) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.buyPricePerLot, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.buyPricePerLot) }}
                {{ form_errors(form.buyPricePerLot) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.saleUnit, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.saleUnit) }}
                {{ form_errors(form.saleUnit) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.sellPricePerLot, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.sellPricePerLot) }}
                {{ form_errors(form.sellPricePerLot) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.status, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.status) }}
                {{ form_errors(form.status) }}
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Créer le lot
            </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}