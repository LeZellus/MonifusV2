<!-- templates/components/character_selector.html.twig -->
{% if characters|length > 0 %}
    <div class="bg-gradient-to-r from-gray-800 to-gray-700 rounded-lg p-4 border border-gray-600" {{ stimulus_controller('character-selector', {
        selectedId: selectedCharacter ? selectedCharacter.id : null
    }) }}>
        {% if selectedCharacter %}
            <!-- Personnage actuel avec style card -->
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold text-lg shadow-lg">
                            {{ selectedCharacter.name|first|upper }}
                        </div>
                        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-gray-800"></div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-white font-semibold text-lg">{{ selectedCharacter.name }}</h3>
                        <div class="flex items-center space-x-3 text-sm text-gray-300">
                            <span class="flex items-center space-x-1">
                                <span class="text-blue-400">‚öîÔ∏è</span>
                                <span>{{ selectedCharacter.classe.name }}</span>
                            </span>
                            <span class="text-gray-500">‚Ä¢</span>
                            <span class="flex items-center space-x-1">
                                <span class="text-green-400">üåç</span>
                                <span>{{ selectedCharacter.server.name }}</span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="flex items-center space-x-2">
                    {% if characters|length > 1 %}
                        <select 
                            {{ stimulus_target('character-selector', 'select') }}
                            {{ stimulus_action('character-selector', 'change', 'change') }}
                            class="bg-gray-700 hover:bg-gray-600 text-white px-3 py-2 rounded-lg border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 text-sm transition-colors"
                        >
                            {% for character in characters %}
                                <option 
                                    value="{{ character.id }}" 
                                    {{ character.id == selectedCharacter.id ? 'selected' : '' }}
                                >
                                    {{ character.name }}
                                </option>
                            {% endfor %}
                        </select>
                    {% endif %}

                    <a href="{{ path('app_profile_character_new', {id: selectedCharacter.tradingProfile.id}) }}" 
                       class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-lg transition-colors" 
                       title="Ajouter un personnage">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% else %}
            <!-- Aucun personnage s√©lectionn√© -->
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-gray-600 rounded-lg flex items-center justify-center text-gray-400">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-gray-400 font-medium">Aucun personnage s√©lectionn√©</h3>
                        <p class="text-gray-500 text-sm">Choisissez un personnage pour commencer</p>
                    </div>
                </div>

                <div class="flex items-center space-x-2">
                    {% if characters|length > 1 %}
                        <select 
                            {{ stimulus_target('character-selector', 'select') }}
                            {{ stimulus_action('character-selector', 'change', 'change') }}
                            class="bg-gray-700 hover:bg-gray-600 text-white px-3 py-2 rounded-lg border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 text-sm transition-colors"
                        >
                            <option value="">-- S√©lectionner --</option>
                            {% for character in characters %}
                                <option value="{{ character.id }}">
                                    {{ character.name }} ({{ character.server.name }})
                                </option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <span class="text-gray-500 text-sm">{{ characters[0].name }} ({{ characters[0].server.name }})</span>
                    {% endif %}

                    <a href="{{ path('app_profile_character_new', {id: characters[0].tradingProfile.id}) }}" 
                       class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-lg transition-colors" 
                       title="Ajouter un personnage">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% else %}
    <!-- Aucun personnage cr√©√© -->
    <div class="bg-gray-800 rounded-lg p-6 border border-gray-600 text-center">
        <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
        </div>
        <h3 class="text-white font-semibold mb-2">Aucun personnage</h3>
        <p class="text-gray-400 text-sm mb-4">Cr√©ez votre premier personnage pour commencer le trading</p>
        <a href="{{ path('app_profile_index') }}" 
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors font-medium">
            Cr√©er un personnage
        </a>
    </div>
{% endif %}