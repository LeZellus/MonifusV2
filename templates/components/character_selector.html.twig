<!-- templates/components/character_selector.html.twig - VERSION SIMPLIFI√âE -->
{% if characters|length > 0 %}
    <div class="bg-gradient-to-r from-gray-800 to-gray-700 rounded-lg p-6 border border-gray-600">
        {% if selectedCharacter %}
            <!-- En-t√™te avec profil et personnage -->
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <div class="w-14 h-14 rounded-lg overflow-hidden shadow-lg border-2 border-lime-500">
                            <img src="{{ selectedCharacter.classe.imagePath }}" 
                                alt="{{ selectedCharacter.classe.name }}" 
                                class="w-full h-full object-cover"
                                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-full h-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg" style="display: none;">
                                {{ selectedCharacter.name|first|upper }}
                            </div>
                        </div>
                        <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-green-500 rounded-full border-2 border-gray-800 flex items-center justify-center">
                            <span class="text-white text-xs font-bold">‚úì</span>
                        </div>
                    </div>
                    <div class="flex-1">
                        <div class="flex items-center space-x-2 mb-1">
                            <h3 class="text-white font-bold text-lg">{{ selectedCharacter.name }}</h3>
                            {% include 'components/badge.html.twig' with {
                                text: 'Actif',
                                color: 'green'
                            } %}
                        </div>
                        <div class="flex items-center space-x-3 text-sm text-gray-300 mb-2">
                            <span class="flex items-center space-x-1">
                                <span class="text-blue-400">‚öîÔ∏è</span>
                                <span>{{ selectedCharacter.classe.name }}</span>
                            </span>
                            <span class="text-gray-500">‚Ä¢</span>
                            <span class="flex items-center space-x-1">
                                <span class="text-green-400">üåç</span>
                                <span>{{ selectedCharacter.server.name }}</span>
                            </span>
                        </div>
                        <div class="flex items-center space-x-4 text-sm">
                            <span class="text-green-400">üì¶ {{ selectedCharacter.lotGroups|filter(lot => lot.status.value == 'available')|length }}</span>
                            <span class="text-blue-400">‚úÖ {{ selectedCharacter.lotGroups|filter(lot => lot.status.value == 'sold')|length }}</span>
                            <span class="text-orange-400">üëÅÔ∏è {{ selectedCharacter.marketWatches|length }}</span>
                        </div>
                    </div>
                </div>

                <div class="flex items-center space-x-2">
                    <!-- Lien simple vers la gestion des profils -->
                    <a href="{{ path('app_profile_index') }}" 
                       class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-2 rounded-lg transition-colors text-sm flex items-center">
                        <span class="mr-1">‚öôÔ∏è</span>
                        G√©rer profils
                    </a>
                    
                    <a href="{{ path('app_profile_character_new', {id: selectedCharacter.tradingProfile.id}) }}" 
                       class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-lg transition-colors" 
                       title="Ajouter un personnage">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- S√©lection rapide si plusieurs personnages dans le profil actuel -->
            {% set currentProfileCharacters = characters|filter(char => char.tradingProfile.id == selectedCharacter.tradingProfile.id) %}
            {% if currentProfileCharacters|length > 1 %}
                <div class="border-t border-gray-600 pt-4">
                    <div class="text-white text-sm font-medium mb-3">Autres personnages de {{ selectedCharacter.tradingProfile.name }} :</div>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
                        {% for character in currentProfileCharacters %}
                            {% if character.id != selectedCharacter.id %}
                                <button data-controller="character-selector" 
                                        data-action="click->character-selector#selectCharacter"
                                        data-character-id="{{ character.id }}"
                                        class="bg-gray-700 hover:bg-gray-600 rounded-lg p-2 text-left transition-colors group">
                                    <div class="flex items-center space-x-2">
                                        <div class="w-8 h-8 rounded overflow-hidden">
                                            <img src="{{ character.classe.imagePath }}" 
                                                 alt="{{ character.classe.name }}" 
                                                 class="w-full h-full object-cover"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                            <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white font-bold text-sm" style="display: none;">
                                                {{ character.name|first|upper }}
                                            </div>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="text-white text-sm font-medium truncate group-hover:text-blue-300">{{ character.name }}</div>
                                            <div class="text-gray-400 text-xs">{{ character.server.name }}</div>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-2 text-xs mt-1">
                                        <span class="text-green-400 flex items-center">
                                            <span class="mr-1">üì¶</span>
                                            {{ character.lotGroups|filter(lot => lot.status.value == 'available')|length }}
                                        </span>
                                        <span class="text-blue-400 flex items-center">
                                            <span class="mr-1">‚úÖ</span>
                                            {{ character.lotGroups|filter(lot => lot.status.value == 'sold')|length }}
                                        </span>
                                        <span class="text-orange-400 flex items-center">
                                            <span class="mr-1">üëÅÔ∏è</span>
                                            {{ character.marketWatches|length }}
                                        </span>
                                    </div>
                                </button>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

        {% else %}
            <!-- Aucun personnage s√©lectionn√© - VERSION SIMPLIFI√âE -->
            <div class="text-center">
                <div class="w-16 h-16 bg-gray-600 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <h3 class="text-white font-bold text-lg mb-2">Aucun personnage s√©lectionn√©</h3>
                <p class="text-gray-400 text-sm mb-6">S√©lectionnez un personnage pour commencer</p>
                
                <div class="text-center">
                    <a href="{{ path('app_profile_index') }}" 
                       class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors inline-flex items-center">
                        <span class="mr-2">‚öôÔ∏è</span>
                        G√©rer profils et personnages
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% else %}
    <!-- Aucun personnage cr√©√© -->
    <div class="bg-gray-800 rounded-lg p-6 border border-gray-600 text-center">
        <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
        </div>
        <h3 class="text-white font-semibold mb-2">Aucun personnage</h3>
        <p class="text-gray-400 text-sm mb-4">Cr√©ez votre premier personnage pour commencer le trading</p>
        <a href="{{ path('app_profile_index') }}" 
           class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors font-medium">
            Cr√©er un personnage
        </a>
    </div>
{% endif %}