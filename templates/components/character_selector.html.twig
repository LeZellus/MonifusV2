{# templates/components/_character_selector.html.twig #}
{% set currentProfile = selectedCharacter ? selectedCharacter.tradingProfile : null %}
{% set profileCharacters = currentProfile ? characters|filter(c => c.tradingProfile.id == currentProfile.id) : characters %}
{# Utiliser la variable profiles du controller au lieu de la calculer #}
{% set allProfiles = profiles is defined ? profiles : (characters|map(c => c.tradingProfile)|reduce((carry, profile) => profile in carry ? carry : carry|merge([profile]), [])) %}

<div class="character-selector">
    
    {# Header du profil actuel - Toujours affich√© #}
    {% if currentProfile %}
    <div class="flex items-center justify-between bg-gray-800/50 backdrop-blur-sm border border-gray-600/50 rounded-lg p-3 mb-4">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-sm">{{ currentProfile.name|first|upper }}</span>
            </div>
            <div>
                <div class="text-white font-medium">{{ currentProfile.name }}</div>
                <div class="text-xs text-gray-400">{{ profileCharacters|length }} personnage{{ profileCharacters|length > 1 ? 's' : '' }}</div>
            </div>
        </div>
        
        {# Dropdown changement de profil - Affich√© seulement s'il y a plusieurs profils #}
        {% if allProfiles|length > 1 %}
        <form method="post" data-turbo="true" class="inline">
            <select 
                name="profile_id"
                onchange="this.form.action = '/profile/switch/' + this.value; this.form.submit();"
                class="bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-white 
                       focus:outline-none focus:border-blue-500 appearance-none cursor-pointer pr-8"
            >
                {% for profile in allProfiles %}
                    <option value="{{ profile.id }}" {{ currentProfile and profile.id == currentProfile.id ? 'selected' : '' }}>
                        {{ profile.name }}
                    </option>
                {% endfor %}
            </select>
        </form>
        {% else %}
        <div class="text-xs text-gray-400 bg-gray-700/50 px-3 py-2 rounded-lg">
            Profil unique
        </div>
        {% endif %}
    </div>
    {% endif %}

    {# Grille des personnages avec d√©tails complets #}
    {% if profileCharacters|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
        {% for character in profileCharacters %}
            <form method="post" action="{{ path('app_character_select', {id: character.id}) }}" data-turbo="true" class="inline">
                <button 
                    type="submit"
                    class="group relative w-full p-4 bg-gray-800/70 backdrop-blur-sm border border-gray-600/50 
                           rounded-xl transition-all duration-300 hover:bg-gray-700/80 hover:border-gray-500 
                           hover:shadow-lg hover:shadow-blue-500/10 hover:-translate-y-1 text-left
                           {{ selectedCharacter and selectedCharacter.id == character.id ? 
                              'bg-gradient-to-br from-blue-600/20 to-purple-600/20 border-blue-500/50 shadow-lg shadow-blue-500/20 ring-2 ring-blue-400/50' : '' }}"
                >
                    {# Header avec image de classe et infos principales #}
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="relative">
                            <div class="w-12 h-12 relative flex-shrink-0">
                                <img 
                                    src="{{ asset(character.classe.imagePath) }}" 
                                    alt="{{ character.classe.name }}"
                                    class="w-full h-full object-contain"
                                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                >
                                {# Fallback avatar si image manquante #}
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl 
                                            flex items-center justify-center text-white font-bold text-lg absolute inset-0" 
                                     style="display: none;">
                                    {{ character.name|first|upper }}
                                </div>
                            </div>
                            {# Indicateur actif #}
                            {% if selectedCharacter and selectedCharacter.id == character.id %}
                                <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-gray-800 
                                            flex items-center justify-center animate-pulse">
                                    <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="flex-1 min-w-0">
                            <h3 class="font-semibold text-white text-lg group-hover:text-blue-200 transition-colors truncate">
                                {{ character.name }}
                            </h3>
                            <div class="flex items-center space-x-2 text-sm text-gray-400">
                                <span>{{ character.classe.name }}</span>
                                <span>‚Ä¢</span>
                                <span>{{ character.server.name }}</span>
                            </div>
                        </div>
                    </div>

                    {# Stats d√©taill√©es en grille #}
                    <div class="grid grid-cols-2 gap-3 mb-3">
                        {# Lots disponibles #}
                        <div class="bg-green-500/10 border border-green-500/30 rounded-lg p-3">
                            <div class="flex items-center space-x-2">
                                <span class="text-lg">üì¶</span>
                                <div>
                                    <div class="text-green-300 font-bold text-lg">
                                        {{ character.tempAvailableLotsCount ?? 0 }}
                                    </div>
                                    <div class="text-green-400 text-xs">Lots disponibles</div>
                                </div>
                            </div>
                        </div>

                        {# Lots vendus #}
                        <div class="bg-blue-500/10 border border-blue-500/30 rounded-lg p-3">
                            <div class="flex items-center space-x-2">
                                <span class="text-lg">‚úÖ</span>
                                <div>
                                    <div class="text-blue-300 font-bold text-lg">
                                        {{ character.tempSoldLotsCount ?? 0 }}
                                    </div>
                                    <div class="text-blue-400 text-xs">Lots vendus</div>
                                </div>
                            </div>
                        </div>

                        {# Surveillances #}
                        <div class="bg-orange-500/10 border border-orange-500/30 rounded-lg p-3">
                            <div class="flex items-center space-x-2">
                                <span class="text-lg">üëÅÔ∏è</span>
                                <div>
                                    <div class="text-orange-300 font-bold text-lg">
                                        {{ character.tempWatchesCount ?? 0 }}
                                    </div>
                                    <div class="text-orange-400 text-xs">Surveillances</div>
                                </div>
                            </div>
                        </div>

                        {# Total lots #}
                        <div class="bg-purple-500/10 border border-purple-500/30 rounded-lg p-3">
                            <div class="flex items-center space-x-2">
                                <span class="text-lg">üìä</span>
                                <div>
                                    <div class="text-purple-300 font-bold text-lg">
                                        {{ character.tempLotsCount ?? 0 }}
                                    </div>
                                    <div class="text-purple-400 text-xs">Total lots</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Barre de progression d'activit√© #}
                    {% set totalActivity = (character.tempLotsCount ?? 0) + (character.tempWatchesCount ?? 0) %}
                    {% if totalActivity > 0 %}
                    <div class="space-y-1">
                        <div class="flex justify-between text-xs text-gray-400">
                            <span>Activit√©</span>
                            <span>{{ totalActivity }} action{{ totalActivity > 1 ? 's' : '' }}</span>
                        </div>
                        <div class="w-full bg-gray-700 rounded-full h-2">
                            <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-2 rounded-full transition-all duration-500" 
                                 style="width: {{ min(100, (totalActivity / 10) * 100) }}%"></div>
                        </div>
                    </div>
                    {% else %}
                    <div class="text-center py-2">
                        <span class="text-gray-500 text-sm">Aucune activit√©</span>
                    </div>
                    {% endif %}

                    {# Action overlay au hover #}
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-xl 
                                opacity-0 group-hover:opacity-100 transition-opacity duration-300 
                                flex items-center justify-center">
                        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2 border border-white/20">
                            <span class="text-white font-medium text-sm">
                                {{ selectedCharacter and selectedCharacter.id == character.id ? 'S√©lectionn√©' : 'Cliquer pour s√©lectionner' }}
                            </span>
                        </div>
                    </div>
                </button>
            </form>
        {% endfor %}
    </div>
    {% endif %}
    
    {# √âtats vides avec actions #}
    {% if not currentProfile %}
        <div class="text-center py-8 bg-gray-800/50 backdrop-blur-sm border border-gray-600/50 rounded-xl">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-700 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <p class="text-gray-400 text-lg font-medium mb-2">Aucun profil s√©lectionn√©</p>
            <p class="text-gray-500 text-sm mb-4">Cr√©ez votre premier profil de trading pour commencer</p>
            <a href="{{ path('app_profile_new') }}" 
               class="inline-flex items-center bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-lg transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Cr√©er un profil
            </a>
        </div>
    {% elseif profileCharacters is empty %}
        <div class="text-center py-8 bg-gray-800/50 backdrop-blur-sm border border-gray-600/50 rounded-xl">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-700 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
            </div>
            <p class="text-gray-400 text-lg font-medium mb-2">Aucun personnage dans ce profil</p>
            <p class="text-gray-500 text-sm mb-4">Ajoutez votre premier personnage pour commencer √† trader</p>
            <a href="{{ path('app_profile_character_new', {id: currentProfile.id}) }}" 
               class="inline-flex items-center bg-green-600 hover:bg-green-500 text-white px-6 py-3 rounded-lg transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Ajouter un personnage
            </a>
        </div>
    {% endif %}

    {# Version mobile compacte #}
    {% if characters|length > 1 %}
    <div class="md:hidden">
        <div class="bg-gray-800/70 backdrop-blur-sm border border-gray-600/50 rounded-lg p-3">
            <form method="post" data-turbo="true">
                <select 
                    name="character_id"
                    onchange="this.form.action = '/character/select/' + this.value; this.form.submit();"
                    class="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-sm text-white"
                >
                    <option value="">üë§ S√©lectionner un personnage</option>
                    {% for character in characters %}
                        <option 
                            value="{{ character.id }}" 
                            {{ selectedCharacter and selectedCharacter.id == character.id ? 'selected' : '' }}
                        >
                            {{ character.name }} ({{ character.classe.name }}) ‚Ä¢ {{ character.server.name }}
                            {% if character.tempLotsCount is defined %} ‚Ä¢ {{ character.tempLotsCount }} lots{% endif %}
                        </option>
                    {% endfor %}
                </select>
            </form>
        </div>
    </div>
    {% endif %}

    {# Indicateur de s√©lection actuelle avec stats d√©taill√©es #}
    {% if selectedCharacter and profileCharacters|length > 1 %}
        <div class="bg-green-600/20 border border-green-500/30 rounded-lg p-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                    <div>
                        <div class="text-green-400 font-medium">
                            {{ selectedCharacter.name }} actif
                        </div>
                        <div class="text-green-300 text-sm">
                            {{ selectedCharacter.classe.name }} ‚Ä¢ {{ selectedCharacter.server.name }}
                        </div>
                    </div>
                </div>
                <div class="flex items-center space-x-3 text-sm">
                    <span class="text-green-300">üì¶ {{ selectedCharacter.tempAvailableLotsCount ?? 0 }}</span>
                    <span class="text-orange-300">üëÅÔ∏è {{ selectedCharacter.tempWatchesCount ?? 0 }}</span>
                    <span class="text-blue-300">‚úÖ {{ selectedCharacter.tempSoldLotsCount ?? 0 }}</span>
                </div>
            </div>
        </div>
    {% endif %}
</div>