{# templates/components/profile_selector_v2.html.twig #}
{% if app.user and selectorData is defined %}
<div class="profile-selector-v2 wrapper-container">
    <div class="space-y-6">
        {% if selectorData.currentProfile %}
            {# Header du profil actuel avec design moderne #}
            <div class="bg-slate-800 border border-slate-600 rounded-xl p-6 shadow-lg">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <div class="flex items-center space-x-4">
                        {# Avatar du profil #}
                        <div class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                            <span class="text-white font-bold text-xl">{{ selectorData.currentProfile.name|first|upper }}</span>
                        </div>

                        {# Infos du profil #}
                        <div>
                            <h2 class="text-xl font-semibold text-white">{{ selectorData.currentProfile.name }}</h2>
                            <div class="flex items-center space-x-4 mt-1">
                                <span class="text-slate-400 text-sm">
                                    {{ selectorData.currentProfile.dofusCharacters|length }} personnage{{ selectorData.currentProfile.dofusCharacters|length > 1 ? 's' : '' }}
                                </span>
                                {% if selectorData.selectedCharacter %}
                                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs bg-emerald-500/20 text-emerald-300 font-medium">
                                        ‚úì {{ selectorData.selectedCharacter.name }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {# Actions du profil #}
                    <div class="flex items-center space-x-3">
                        {# Bouton Nouveau Personnage #}
                        <a href="{{ path('app_profile_character_new', {id: selectorData.currentProfile.id}) }}"
                           class="inline-flex items-center space-x-2 bg-emerald-600 hover:bg-emerald-500 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-md hover:shadow-lg">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span>Nouveau Personnage</span>
                        </a>

                        {# Bouton Nouveau Profil #}
                        <a href="{{ path('app_profile_new') }}"
                           class="inline-flex items-center space-x-2 bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-md hover:shadow-lg">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            <span>Nouveau Profil</span>
                        </a>

                        {# Menu Actions Profil #}
                        <div class="relative" data-controller="dropdown">
                            <button type="button" data-action="click->dropdown#toggle"
                                    class="inline-flex items-center space-x-2 bg-slate-700 hover:bg-slate-600 text-slate-300 hover:text-white px-4 py-2 rounded-lg font-medium transition-all duration-200">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                                </svg>
                                <span>Actions</span>
                            </button>

                            <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-2 w-56 bg-slate-900 border border-slate-600 rounded-lg shadow-2xl z-50 overflow-hidden">
                                <div class="py-2">
                                    <a href="{{ path('app_profile_edit', {id: selectorData.currentProfile.id}) }}"
                                       class="flex items-center space-x-3 px-4 py-3 text-slate-300 hover:text-white hover:bg-slate-800 transition-colors">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                        <span>√âditer le profil</span>
                                    </a>

                                    {% if selectorData.profiles|length > 1 %}
                                        <div class="border-t border-slate-700 my-2"></div>
                                        <form method="post" action="{{ path('app_profile_delete', {id: selectorData.currentProfile.id}) }}"
                                              onsubmit="return confirm('Supprimer le profil {{ selectorData.currentProfile.name }} ?')">
                                            <button type="submit" class="flex items-center space-x-3 w-full px-4 py-3 text-red-400 hover:text-red-300 hover:bg-red-900/20 transition-colors">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                <span>Supprimer le profil</span>
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# S√©lecteur de profil moderne #}
                        {% if selectorData.profiles|length > 1 %}
                            <div class="relative" data-controller="dropdown">
                                <button type="button" data-action="click->dropdown#toggle"
                                        class="inline-flex items-center space-x-2 bg-amber-600 hover:bg-amber-500 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-md hover:shadow-lg">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                    </svg>
                                    <span>Changer de Profil</span>
                                </button>

                                <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-2 w-72 bg-slate-900 border border-slate-600 rounded-lg shadow-2xl z-50 max-h-80 overflow-y-auto">
                                    <div class="p-3">
                                        <h3 class="text-sm font-medium text-slate-400 mb-3">Choisir un profil</h3>
                                        <div class="space-y-2">
                                            {% for profile in selectorData.profiles %}
                                                {% if profile.id != selectorData.currentProfile.id %}
                                                    <form method="post" action="{{ path('app_profile_switch', {id: profile.id}) }}" data-turbo="true">
                                                        <input type="hidden" name="redirect_url" value="{{ app.request.uri }}">
                                                        <button type="submit" class="w-full text-left p-3 bg-slate-800 hover:bg-slate-700 rounded-lg transition-colors group">
                                                            <div class="flex items-center space-x-3">
                                                                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center shadow-md">
                                                                    <span class="text-white font-bold text-sm">{{ profile.name|first|upper }}</span>
                                                                </div>
                                                                <div class="flex-1">
                                                                    <div class="text-white font-medium group-hover:text-blue-300 transition-colors">{{ profile.name }}</div>
                                                                    <div class="text-slate-400 text-xs">{{ profile.dofusCharacters|length }} personnage{{ profile.dofusCharacters|length > 1 ? 's' : '' }}</div>
                                                                </div>
                                                                <svg class="w-4 h-4 text-slate-400 group-hover:text-blue-300 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                                </svg>
                                                            </div>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Section des personnages #}
            {% set profileCharacters = selectorData.currentProfile.dofusCharacters %}
            {% if profileCharacters|length > 0 %}
                <div class="bg-slate-800/50 border border-slate-600/50 rounded-xl p-6">
                    <h3 class="text-lg font-medium text-white mb-4 flex items-center space-x-2">
                        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <span>Personnages</span>
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for character in profileCharacters %}
                            <div class="relative group">
                                {# Card du personnage #}
                                <div class="bg-slate-700/50 border border-slate-600/50 rounded-lg p-4 hover:bg-slate-700/70 transition-all duration-200
                                    {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? 'ring-2 ring-blue-500 bg-blue-900/20' : '' }}">

                                    <div class="flex items-start space-x-3">
                                        {# Image de classe #}
                                        <div class="flex-shrink-0">
                                            <img src="{{ asset(character.classe.imagePath) }}" alt="{{ character.classe.name }}"
                                                 class="w-12 h-12 rounded-lg object-cover shadow-md">
                                        </div>

                                        {# Infos du personnage #}
                                        <div class="flex-1 min-w-0">
                                            <h4 class="font-medium text-white truncate">{{ character.name }}</h4>
                                            <p class="text-sm text-slate-400">{{ character.classe.name }} ‚Ä¢ {{ character.server.name }}</p>

                                            {# Statistiques #}
                                            <div class="flex items-center space-x-3 mt-2">
                                                {% set availableLots = character.tempLotsAvailable ?? 0 %}
                                                {% set salesTransactions = character.tempSalesTransactions ?? 0 %}
                                                {% set watchesCount = character.tempWatchesCount ?? 0 %}

                                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                                                    {{ availableLots > 0 ? 'bg-emerald-500/20 text-emerald-300' : 'bg-slate-600/30 text-slate-400' }}">
                                                    üì¶ {{ availableLots }}
                                                </span>
                                                {% if salesTransactions > 0 %}
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-blue-500/20 text-blue-300 font-medium">
                                                        üí∞ {{ salesTransactions }}
                                                    </span>
                                                {% endif %}
                                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                                                    {{ watchesCount > 0 ? 'bg-amber-500/20 text-amber-300' : 'bg-slate-600/30 text-slate-400' }}">
                                                    üëÅÔ∏è {{ watchesCount }}
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    {# Actions du personnage - toujours visibles sur mobile, hover sur desktop #}
                                    <div class="flex items-center justify-between mt-3 pt-3 border-t border-slate-600/30">
                                        <form method="post" action="{{ path('app_profile_character_select', {id: character.id}) }}" data-turbo="true" class="flex-1">
                                            <button type="submit" class="w-full text-left text-sm font-medium transition-colors
                                                {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? 'text-blue-400' : 'text-slate-400 hover:text-white' }}">
                                                {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? '‚úì S√©lectionn√©' : 'S√©lectionner' }}
                                            </button>
                                        </form>

                                        <div class="flex items-center space-x-2">
                                            <a href="{{ path('app_profile_character_edit', {id: character.id}) }}"
                                               class="inline-flex items-center justify-center w-8 h-8 bg-amber-600/20 hover:bg-amber-600/40 text-amber-300 hover:text-amber-200 rounded-lg transition-all duration-200">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                            </a>

                                            {% if profileCharacters|length > 1 %}
                                                <form method="post" action="{{ path('app_profile_character_delete', {id: character.id}) }}"
                                                      onsubmit="return confirm('Supprimer {{ character.name }} ?')" class="inline">
                                                    <button type="submit" class="inline-flex items-center justify-center w-8 h-8 bg-red-600/20 hover:bg-red-600/40 text-red-300 hover:text-red-200 rounded-lg transition-all duration-200">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                        </svg>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                {# √âtat vide avec un design attractif #}
                <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 border-2 border-dashed border-slate-600/50 rounded-2xl p-12 text-center">
                    <div class="max-w-sm mx-auto">
                        {# Illustration #}
                        <div class="w-20 h-20 bg-gradient-to-br from-blue-500/20 to-indigo-600/20 rounded-2xl mx-auto mb-6 flex items-center justify-center">
                            <svg class="w-10 h-10 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>

                        {# Texte #}
                        <h3 class="text-xl font-semibold text-white mb-3">Aucun personnage</h3>
                        <p class="text-slate-400 mb-8 leading-relaxed">Ce profil ne contient encore aucun personnage. Ajoutez votre premier personnage pour commencer √† g√©rer vos lots et vos profits !</p>

                        {# Actions principales sans scroll #}
                        <div class="space-y-4">
                            <a href="{{ path('app_profile_character_new', {id: selectorData.currentProfile.id}) }}"
                               class="inline-flex items-center space-x-3 bg-gradient-to-r from-emerald-600 to-emerald-500 hover:from-emerald-500 hover:to-emerald-400 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl hover:shadow-emerald-500/25 transform hover:-translate-y-0.5">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span>Ajouter un personnage</span>
                            </a>

                            {# Alternative visible si plusieurs profils #}
                            {% if selectorData.profiles|length > 1 %}
                                <div class="text-slate-500 text-sm font-medium">ou</div>
                                <div class="relative inline-block" data-controller="dropdown">
                                    <button type="button" data-action="click->dropdown#toggle"
                                            class="inline-flex items-center space-x-2 bg-slate-700 hover:bg-slate-600 text-slate-300 hover:text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 shadow-md">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                        </svg>
                                        <span>Changer de profil</span>
                                    </button>

                                    {# Menu centr√© pour √©viter le scroll #}
                                    <div data-dropdown-target="menu" class="hidden absolute left-1/2 transform -translate-x-1/2 bottom-full mb-2 w-80 bg-slate-900 border border-slate-600 rounded-lg shadow-2xl z-50 max-h-60 overflow-y-auto">
                                        <div class="p-4">
                                            <h4 class="text-sm font-medium text-slate-400 mb-3">Profils disponibles</h4>
                                            <div class="space-y-2">
                                                {% for profile in selectorData.profiles %}
                                                    {% if profile.id != selectorData.currentProfile.id %}
                                                        <form method="post" action="{{ path('app_profile_switch', {id: profile.id}) }}" data-turbo="true">
                                                            <input type="hidden" name="redirect_url" value="{{ app.request.uri }}">
                                                            <button type="submit" class="w-full text-left p-3 bg-slate-800 hover:bg-slate-700 rounded-lg transition-colors group">
                                                                <div class="flex items-center space-x-3">
                                                                    <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center shadow-md">
                                                                        <span class="text-white font-bold text-sm">{{ profile.name|first|upper }}</span>
                                                                    </div>
                                                                    <div class="flex-1">
                                                                        <div class="text-white font-medium group-hover:text-purple-300 transition-colors">{{ profile.name }}</div>
                                                                        <div class="text-slate-400 text-xs">{{ profile.dofusCharacters|length }} personnage{{ profile.dofusCharacters|length > 1 ? 's' : '' }}</div>
                                                                    </div>
                                                                    <svg class="w-4 h-4 text-slate-400 group-hover:text-purple-300 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                                    </svg>
                                                                </div>
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% else %}
            {# √âtat : Aucun profil #}
            <div class="bg-gradient-to-br from-slate-800/50 to-slate-900/50 border-2 border-dashed border-slate-600/50 rounded-2xl p-16 text-center">
                <div class="max-w-md mx-auto">
                    <div class="w-24 h-24 bg-gradient-to-br from-blue-500/20 to-indigo-600/20 rounded-2xl mx-auto mb-8 flex items-center justify-center">
                        <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-white mb-4">Bienvenue sur Monifus !</h2>
                    <p class="text-slate-400 mb-10 leading-relaxed">Cr√©ez votre premier profil de trading pour commencer √† g√©rer vos lots Dofus et maximiser vos profits.</p>
                    <a href="{{ path('app_profile_new') }}"
                       class="inline-flex items-center space-x-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 text-white px-10 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:shadow-blue-500/25 transform hover:-translate-y-0.5">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        <span>Cr√©er mon premier profil</span>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>

{# CSS personnalis√© pour les dropdowns #}
<style>
.profile-selector-v2 [data-dropdown-target="menu"] {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
}

.profile-selector-v2 [data-dropdown-target="menu"]::-webkit-scrollbar {
    width: 6px;
}

.profile-selector-v2 [data-dropdown-target="menu"]::-webkit-scrollbar-track {
    background: rgba(51, 65, 85, 0.3);
    border-radius: 3px;
}

.profile-selector-v2 [data-dropdown-target="menu"]::-webkit-scrollbar-thumb {
    background: rgba(100, 116, 139, 0.6);
    border-radius: 3px;
}

.profile-selector-v2 [data-dropdown-target="menu"]::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 116, 139, 0.8);
}
</style>
{% endif %}