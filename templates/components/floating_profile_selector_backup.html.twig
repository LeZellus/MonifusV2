{# templates/components/floating_profile_selector.html.twig #}
{% if app.user and selectorData is defined %}
<!-- S√©lecteur flottant repositionn√© pour √©viter le conflit avec le widget de dons -->
<div class="fixed bottom-6 left-6 z-40" data-controller="floating-selector">
    <!-- Bouton principal flottant -->
    <div class="relative">
        {% if selectorData.selectedCharacter %}
            <!-- Affichage du personnage s√©lectionn√© -->
            <button type="button"
                    data-action="click->floating-selector#togglePanel"
                    data-floating-selector-target="trigger"
                    class="group flex items-center space-x-3 bg-gray-800/95 backdrop-blur-md border border-gray-600/60 rounded-xl px-4 py-3 shadow-2xl hover:bg-gray-750/95 hover:border-blue-500/60 transition-all duration-200 hover:shadow-blue-500/20">

                <!-- Avatar du personnage -->
                <img src="{{ asset(selectorData.selectedCharacter.classe.imagePath) }}"
                     alt="{{ selectorData.selectedCharacter.classe.name }}"
                     class="w-10 h-10 rounded-lg object-cover ring-2 ring-gray-500/50 group-hover:ring-blue-400/60 transition-all duration-200">

                <!-- Infos du personnage -->
                <div class="text-left">
                    <div class="text-white font-semibold text-sm">{{ selectorData.selectedCharacter.name }}</div>
                    <div class="text-gray-300 text-xs">{{ selectorData.selectedCharacter.classe.name }} ‚Ä¢ {{ selectorData.selectedCharacter.server.name }}</div>

                    <!-- Badges de statut -->
                    <div class="flex items-center space-x-1.5 mt-1">
                        {% set availableLots = selectorData.selectedCharacter.tempLotsAvailable ?? 0 %}
                        {% set salesTransactions = selectorData.selectedCharacter.tempSalesTransactions ?? 0 %}
                        {% set watchesCount = selectorData.selectedCharacter.tempWatchesCount ?? 0 %}

                        {% if availableLots > 0 %}
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs bg-green-500/20 text-green-300 border border-green-500/40 font-medium">
                                üì¶ {{ availableLots }}
                            </span>
                        {% endif %}

                        {% if salesTransactions > 0 %}
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs bg-blue-500/20 text-blue-300 border border-blue-500/40 font-medium">
                                üí∞ {{ salesTransactions }}
                            </span>
                        {% endif %}

                        {% if watchesCount > 0 %}
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs bg-orange-500/20 text-orange-300 border border-orange-500/40 font-medium">
                                üëÅÔ∏è {{ watchesCount }}
                            </span>
                        {% endif %}
                    </div>
                </div>

                <!-- Ic√¥ne d'expansion avec tooltip -->
                <div class="flex flex-col items-center ml-2">
                    <div class="text-gray-400 group-hover:text-blue-400 transition-colors">
                        <svg class="w-4 h-4 transform group-hover:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"></path>
                        </svg>
                    </div>
                    <div class="text-gray-500 text-xs mt-0.5 font-medium">Changer</div>
                </div>
            </button>
        {% else %}
            <!-- Aucun personnage s√©lectionn√© -->
            <button type="button"
                    data-action="click->floating-selector#togglePanel"
                    data-floating-selector-target="trigger"
                    class="group flex items-center space-x-3 bg-red-600/95 backdrop-blur-md border border-red-500/60 rounded-xl px-4 py-3 shadow-2xl hover:bg-red-500/95 hover:shadow-red-500/20 transition-all duration-200">

                <div class="w-10 h-10 bg-gray-600/70 rounded-lg flex items-center justify-center ring-2 ring-red-500/50">
                    <span class="text-gray-200 text-lg">‚ùì</span>
                </div>

                <div class="text-left">
                    <div class="text-white font-semibold text-sm">Aucun personnage</div>
                    <div class="text-red-200 text-xs">S√©lectionner un personnage</div>
                </div>

                <div class="flex flex-col items-center ml-2">
                    <div class="text-red-200">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"></path>
                        </svg>
                    </div>
                    <div class="text-red-300 text-xs mt-0.5 font-medium">Ouvrir</div>
                </div>
            </button>
        {% endif %}
    </div>

    <!-- Panel flottant avec scroll et positionnement am√©lior√© -->
    <div data-floating-selector-target="panel"
         class="hidden absolute bottom-full left-0 mb-4 w-96 bg-gray-900/95 backdrop-blur-md border border-gray-500 rounded-xl shadow-2xl shadow-black/50 overflow-hidden z-50">

        <!-- Header du panel -->
        <div class="bg-gradient-to-r from-gray-800 to-gray-700 px-6 py-4 border-b border-gray-600/40">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-white font-bold text-lg">S√©lection de personnage</h3>
                    <p class="text-gray-300 text-sm">Choisissez votre personnage actif</p>
                </div>
                <button type="button"
                        data-action="click->floating-selector#closePanel"
                        class="text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg p-2 transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Actions rapides avec labels clairs -->
            <div class="flex items-center space-x-3 mt-4">
                <a href="{{ path('app_profile_new') }}"
                   class="inline-flex items-center space-x-2 bg-blue-600/90 hover:bg-blue-500/90 border border-blue-500/60 rounded-lg px-3 py-2 text-sm text-white font-medium transition-all duration-200 hover:shadow-lg hover:shadow-blue-500/20">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Nouveau profil</span>
                </a>

                {% if selectorData.currentProfile %}
                    <a href="{{ path('app_profile_character_new', {id: selectorData.currentProfile.id}) }}"
                       class="inline-flex items-center space-x-2 bg-green-600/90 hover:bg-green-500/90 border border-green-500/60 rounded-lg px-3 py-2 text-sm text-white font-medium transition-all duration-200 hover:shadow-lg hover:shadow-green-500/20">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span>Nouveau personnage</span>
                    </a>
                {% endif %}
            </div>
        </div>

        <!-- Liste des profils et personnages avec scroll -->
        <div class="max-h-80 overflow-y-auto custom-scrollbar">
            <div class="p-4">
                {% if selectorData.currentProfile %}
                    <!-- Profil actuel -->
                    <div class="mb-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-3">
                                <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center shadow-lg">
                                    <span class="text-white text-sm font-bold">{{ selectorData.currentProfile.name|first|upper }}</span>
                                </div>
                                <div>
                                    <span class="text-white text-lg font-semibold">{{ selectorData.currentProfile.name }}</span>
                                    <div class="text-gray-400 text-sm">{{ selectorData.currentProfile.dofusCharacters|length }} personnage{{ selectorData.currentProfile.dofusCharacters|length > 1 ? 's' : '' }}</div>
                                </div>
                            </div>

                            <!-- Switch profile si plusieurs avec label clair -->
                            {% if selectorData.profiles|length > 1 %}
                                <div class="relative" data-controller="dropdown">
                                    <button type="button" data-action="click->dropdown#toggle"
                                            class="inline-flex items-center space-x-2 bg-gray-700/70 hover:bg-gray-600/70 border border-gray-600/60 rounded-lg px-3 py-2 text-sm text-gray-300 hover:text-white font-medium transition-all duration-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                        </svg>
                                        <span>Changer de profil</span>
                                    </button>
                                    <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-2 w-64 bg-gray-900/95 backdrop-blur-md border border-gray-500 rounded-lg shadow-2xl shadow-black/40 z-50 overflow-hidden">
                                        {% for profile in selectorData.profiles %}
                                            {% if profile.id != selectorData.currentProfile.id %}
                                                <form method="post" action="{{ path('app_profile_switch', {id: profile.id}) }}" data-turbo="true">
                                                    <input type="hidden" name="redirect_url" value="{{ app.request.uri }}">
                                                    <button type="submit" class="w-full px-4 py-3 text-left hover:bg-gray-800/70 transition-colors flex items-center space-x-3">
                                                        <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center">
                                                            <span class="text-white text-xs font-bold">{{ profile.name|first|upper }}</span>
                                                        </div>
                                                        <div class="flex-1">
                                                            <div class="text-white font-medium">{{ profile.name }}</div>
                                                            <div class="text-gray-400 text-xs">{{ profile.dofusCharacters|length }} personnage{{ profile.dofusCharacters|length > 1 ? 's' : '' }}</div>
                                                        </div>
                                                        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                        </svg>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Personnages du profil -->
                        <div class="space-y-2">
                            {% for character in selectorData.currentProfile.dofusCharacters %}
                                <form method="post" action="{{ path('app_profile_character_select', {id: character.id}) }}" data-turbo="true">
                                    <button type="submit" class="w-full p-4 rounded-lg text-left transition-all duration-200 hover:bg-gray-700/60 hover:shadow-lg
                                        {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? 'bg-blue-600/30 border-2 border-blue-500/60 shadow-blue-500/20' : 'bg-gray-700/40 border-2 border-transparent hover:border-gray-600/60' }}">

                                        <div class="flex items-center space-x-4">
                                            <img src="{{ asset(character.classe.imagePath) }}" alt="{{ character.classe.name }}"
                                                 class="w-12 h-12 rounded-lg object-cover ring-2 ring-gray-500/40 hover:ring-gray-400/60 transition-all">

                                            <div class="flex-1 min-w-0">
                                                <div class="text-white text-base font-semibold truncate">{{ character.name }}</div>
                                                <div class="text-gray-300 text-sm">{{ character.classe.name }} ‚Ä¢ {{ character.server.name }}</div>

                                                <!-- Mini badges avec meilleur espacement -->
                                                <div class="flex items-center space-x-2 mt-2">
                                                    {% set availableLots = character.tempLotsAvailable ?? 0 %}
                                                    {% set salesTransactions = character.tempSalesTransactions ?? 0 %}
                                                    {% set watchesCount = character.tempWatchesCount ?? 0 %}

                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                                                        {{ availableLots > 0 ? 'bg-green-500/20 text-green-300 border border-green-500/40' : 'bg-gray-600/30 text-gray-400 border border-gray-600/40' }}">
                                                        üì¶ {{ availableLots }}
                                                    </span>
                                                    {% if salesTransactions > 0 %}
                                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-blue-500/20 text-blue-300 border border-blue-500/40 font-medium">
                                                            üí∞ {{ salesTransactions }}
                                                        </span>
                                                    {% endif %}
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs
                                                        {{ watchesCount > 0 ? 'bg-orange-500/20 text-orange-300 border border-orange-500/40' : 'bg-gray-600/30 text-gray-400 border border-gray-600/40' }} font-medium">
                                                        üëÅÔ∏è {{ watchesCount }}
                                                    </span>
                                                </div>
                                            </div>

                                            {% if selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id %}
                                                <div class="flex items-center justify-center w-8 h-8 bg-blue-500/20 rounded-full border border-blue-400/60">
                                                    <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </button>
                                </form>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <!-- Aucun profil -->
                    <div class="text-center py-8">
                        <div class="w-16 h-16 bg-gray-600/50 rounded-full mx-auto mb-4 flex items-center justify-center">
                            <span class="text-gray-400 text-2xl">üë§</span>
                        </div>
                        <h4 class="text-white font-semibold text-lg mb-2">Aucun profil de trading</h4>
                        <p class="text-gray-400 text-sm mb-6">Cr√©ez votre premier profil pour commencer</p>
                        <a href="{{ path('app_profile_new') }}"
                           class="inline-flex items-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            <span>Cr√©er mon premier profil</span>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Overlay pour fermer le panel -->
    <div data-floating-selector-target="overlay"
         data-action="click->floating-selector#closePanel"
         class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-30"></div>
</div>

<style>
.custom-scrollbar::-webkit-scrollbar {
    width: 6px;
}
.custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(75, 85, 99, 0.3);
    border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(156, 163, 175, 0.6);
    border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 163, 175, 0.8);
}
</style>

{% endif %}