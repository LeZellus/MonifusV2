{# templates/components/floating_profile_selector_v2.html.twig #}
{% if app.user and selectorData is defined %}
<!-- S√©lecteur flottant moderne avec design am√©lior√© -->
<div class="fixed bottom-6 left-6 z-40" data-controller="floating-selector">
    <!-- Bouton principal flottant redesign√© -->
    <div class="relative">
        {% if selectorData.selectedCharacter %}
            <!-- Affichage du personnage s√©lectionn√© avec nouveau style -->
            <button type="button"
                    data-action="click->floating-selector#togglePanel"
                    data-floating-selector-target="trigger"
                    class="group flex items-center space-x-4 bg-slate-900 border-2 border-slate-600 rounded-2xl px-6 py-4 shadow-2xl hover:bg-slate-800 hover:border-blue-500 transition-all duration-300 hover:shadow-blue-500/20 hover:-translate-y-1">

                <!-- Avatar du personnage avec image de classe -->
                <div class="relative flex-shrink-0">
                    <img src="{{ asset(selectorData.selectedCharacter.classe.imagePath) }}"
                         alt="{{ selectorData.selectedCharacter.classe.name }}"
                         class="w-12 h-12 rounded-xl object-cover shadow-lg border-2 border-slate-600 group-hover:border-blue-400 transition-all duration-300">
                </div>

                <!-- Infos du personnage -->
                <div class="text-left flex-1 min-w-0">
                    <div class="text-white font-semibold text-sm truncate group-hover:text-blue-200 transition-colors">
                        {{ selectorData.selectedCharacter.name }}
                    </div>
                    <div class="text-slate-400 text-xs group-hover:text-blue-300 transition-colors">
                        {{ selectorData.selectedCharacter.classe.name }} ‚Ä¢ {{ selectorData.selectedCharacter.server.name }}
                    </div>

                    <!-- Mini badges de statut inline -->
                    <div class="flex items-center space-x-2 mt-2">
                        {% set availableLots = selectorData.selectedCharacter.tempLotsAvailable ?? 0 %}
                        {% set salesTransactions = selectorData.selectedCharacter.tempSalesTransactions ?? 0 %}
                        {% set watchesCount = selectorData.selectedCharacter.tempWatchesCount ?? 0 %}

                        <span class="inline-flex items-center px-2 py-0.5 rounded-lg text-xs font-medium border
                            {{ availableLots > 0 ? 'bg-emerald-500/20 text-emerald-300 border-emerald-500/40' : 'bg-slate-700/50 text-slate-400 border-slate-600/40' }}">
                            üì¶ {{ availableLots }}
                        </span>
                        {% if salesTransactions > 0 %}
                            <span class="inline-flex items-center px-2 py-0.5 rounded-lg text-xs bg-blue-500/20 text-blue-300 border border-blue-500/40 font-medium">
                                üí∞ {{ salesTransactions }}
                            </span>
                        {% endif %}
                        <span class="inline-flex items-center px-2 py-0.5 rounded-lg text-xs font-medium border
                            {{ watchesCount > 0 ? 'bg-amber-500/20 text-amber-300 border-amber-500/40' : 'bg-slate-700/50 text-slate-400 border-slate-600/40' }}">
                            üëÅÔ∏è {{ watchesCount }}
                        </span>
                    </div>
                </div>

                <!-- Ic√¥ne d'expansion moderne -->
                <div class="flex flex-col items-center ml-2">
                    <div class="text-slate-400 group-hover:text-blue-400 transition-all duration-300 transform group-hover:scale-110">
                        <svg class="w-5 h-5 transform group-hover:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"></path>
                        </svg>
                    </div>
                    <div class="text-slate-500 text-xs mt-1 font-medium group-hover:text-blue-400 transition-colors">Menu</div>
                </div>
            </button>
        {% else %}
            <!-- Aucun personnage s√©lectionn√© avec design attractif -->
            <button type="button"
                    data-action="click->floating-selector#togglePanel"
                    data-floating-selector-target="trigger"
                    class="group flex items-center space-x-4 bg-red-600 hover:bg-red-500 border-2 border-red-400 rounded-2xl px-6 py-4 shadow-2xl hover:shadow-red-500/30 transition-all duration-300 hover:-translate-y-1 animate-pulse">

                <div class="w-12 h-12 bg-slate-700 rounded-xl flex items-center justify-center border-2 border-red-300 shadow-lg">
                    <span class="text-red-200 text-xl">‚ùì</span>
                </div>

                <div class="text-left flex-1">
                    <div class="text-white font-bold text-sm">Aucun personnage</div>
                    <div class="text-red-100 text-xs">Cliquez pour s√©lectionner</div>
                </div>

                <div class="flex flex-col items-center ml-2">
                    <div class="text-red-200 transform group-hover:scale-110 transition-transform">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="text-red-200 text-xs mt-1 font-medium">Ouvrir</div>
                </div>
            </button>
        {% endif %}
    </div>

    <!-- Panel flottant redesign√© compl√®tement -->
    <div data-floating-selector-target="panel"
         class="hidden absolute bottom-full left-0 mb-4 w-80 bg-slate-900 border border-slate-600 rounded-xl shadow-2xl shadow-black/60 overflow-hidden z-[9999] backdrop-blur-xl">

        <!-- Header du panel moderne -->
        <div class="bg-slate-800 px-4 py-3 border-b border-slate-600">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                    <div class="w-7 h-7 bg-blue-600 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-white font-semibold text-sm">S√©lection</h3>
                    </div>
                </div>
                <button type="button"
                        data-action="click->floating-selector#closePanel"
                        class="text-slate-400 hover:text-white hover:bg-slate-700 rounded-lg p-1.5 transition-all duration-200">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

        </div>

        <!-- Corps du panel avec scroll optimis√© -->
        <div class="max-h-64 overflow-y-auto custom-scrollbar">
            {% if selectorData.currentProfile %}
                <!-- Profil actuel avec design moderne -->
                <div class="p-4 space-y-4">
                    <div>
                        <!-- S√©lection de profils inline -->
                        {% if selectorData.profiles|length > 1 %}
                            <div class="mb-4">
                                <h5 class="text-slate-400 text-xs font-medium mb-3">Profils</h5>
                                <div class="space-y-2">
                                    {% for profile in selectorData.profiles %}
                                        <form method="post" action="{{ path('app_profile_switch', {id: profile.id}) }}" data-turbo="true">
                                            <input type="hidden" name="redirect_url" value="{{ app.request.uri }}">
                                            <button type="submit" class="w-full text-left p-3 rounded-lg transition-all duration-200 border
                                                {{ profile.id == selectorData.currentProfile.id ? 'bg-indigo-600/20 border-indigo-500 shadow-indigo-500/10' : 'bg-slate-800/50 border-transparent hover:bg-slate-700/60 hover:border-slate-600' }}">
                                                <div class="flex items-center space-x-3">
                                                    <div class="w-8 h-8 rounded-lg flex items-center justify-center
                                                        {{ profile.id == selectorData.currentProfile.id ? 'bg-indigo-600' : 'bg-slate-600' }}">
                                                        <span class="text-white text-sm font-bold">{{ profile.name|first|upper }}</span>
                                                    </div>
                                                    <div class="flex-1">
                                                        <div class="text-white text-sm font-medium
                                                            {{ profile.id == selectorData.currentProfile.id ? 'text-indigo-200' : '' }}">
                                                            {{ profile.name }}
                                                        </div>
                                                        <div class="text-slate-400 text-xs">{{ profile.dofusCharacters|length }} personnage{{ profile.dofusCharacters|length > 1 ? 's' : '' }}</div>
                                                    </div>
                                                    {% if profile.id == selectorData.currentProfile.id %}
                                                        <div class="w-4 h-4 bg-indigo-500 rounded-full flex items-center justify-center">
                                                            <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                            </svg>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </button>
                                        </form>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        <!-- Liste des personnages moderne -->
                        <div>
                            {% if selectorData.currentProfile.dofusCharacters|length > 0 %}
                                <h5 class="text-slate-400 text-xs font-medium mb-3">Personnages</h5>
                                <div class="space-y-3">
                                {% for character in selectorData.currentProfile.dofusCharacters %}
                                    <form method="post" action="{{ path('app_profile_character_select', {id: character.id}) }}" data-turbo="true">
                                        <button type="submit" class="w-full p-3 rounded-lg text-left transition-all duration-200 hover:bg-slate-700/60 border border-transparent hover:border-slate-600
                                            {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? 'bg-blue-600/20 border-blue-500' : 'bg-slate-800/50' }}">

                                            <div class="flex items-center space-x-3">
                                                <!-- Image de classe avec meilleur design -->
                                                <div class="relative flex-shrink-0">
                                                    <img src="{{ asset(character.classe.imagePath) }}" alt="{{ character.classe.name }}"
                                                         class="w-10 h-10 rounded-lg object-cover border border-slate-600">

                                                    {% if selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id %}
                                                        <div class="absolute -top-1 -right-1 w-4 h-4 bg-blue-500 rounded-full border border-slate-900 flex items-center justify-center">
                                                            <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                                            </svg>
                                                        </div>
                                                    {% endif %}
                                                </div>

                                                <div class="flex-1 min-w-0">
                                                    <div class="text-white font-medium text-sm truncate
                                                        {{ selectorData.selectedCharacter and selectorData.selectedCharacter.id == character.id ? 'text-blue-200' : '' }}">
                                                        {{ character.name }}
                                                    </div>
                                                    <div class="text-slate-400 text-xs">{{ character.classe.name }} ‚Ä¢ {{ character.server.name }}</div>

                                                    <!-- Stats compactes -->
                                                    <div class="flex items-center space-x-1.5 mt-1">
                                                        {% set availableLots = character.tempLotsAvailable ?? 0 %}
                                                        {% set salesTransactions = character.tempSalesTransactions ?? 0 %}
                                                        {% set watchesCount = character.tempWatchesCount ?? 0 %}

                                                        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium
                                                            {{ availableLots > 0 ? 'bg-emerald-500/20 text-emerald-300' : 'bg-slate-700/30 text-slate-400' }}">
                                                            üì¶{{ availableLots }}
                                                        </span>
                                                        {% if salesTransactions > 0 %}
                                                            <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs bg-blue-500/20 text-blue-300 font-medium">
                                                                üí∞{{ salesTransactions }}
                                                            </span>
                                                        {% endif %}
                                                        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium
                                                            {{ watchesCount > 0 ? 'bg-amber-500/20 text-amber-300' : 'bg-slate-700/30 text-slate-400' }}">
                                                            üëÅÔ∏è{{ watchesCount }}
                                                        </span>
                                                    </div>
                                                </div>

                                            </div>
                                        </button>
                                    </form>
                                {% endfor %}
                                </div>
                            {% else %}
                                <!-- √âtat vide moderne SANS SCROLL -->
                                <div class="text-center py-4">
                                    <div class="w-12 h-12 bg-slate-700 rounded-xl mx-auto mb-3 flex items-center justify-center">
                                        <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <h4 class="text-white font-medium text-sm mb-3">Aucun personnage</h4>
                                    <a href="{{ path('app_profile_index') }}"
                                       class="inline-flex items-center space-x-2 bg-emerald-600 hover:bg-emerald-500 text-white px-4 py-2 rounded-lg text-xs font-medium transition-all duration-200 shadow-md hover:shadow-lg">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        <span>G√©rer le profil</span>
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <!-- Aucun profil avec design moderne -->
                <div class="text-center py-6 px-4">
                    <div class="w-12 h-12 bg-blue-600/20 rounded-xl mx-auto mb-3 flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <h4 class="text-white font-medium text-sm mb-1">Aucun profil</h4>
                    <p class="text-slate-400 text-xs">Cr√©ez depuis le menu principal</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Overlay pour fermer le panel -->
    <div data-floating-selector-target="overlay"
         data-action="click->floating-selector#closePanel"
         class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-[9998]"></div>
</div>

{# CSS personnalis√© am√©lior√© #}
<style>
/* Scrollbar personnalis√©e moderne */
.custom-scrollbar::-webkit-scrollbar {
    width: 6px;
}
.custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(51, 65, 85, 0.3);
    border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(100, 116, 139, 0.6);
    border-radius: 3px;
}
.custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 116, 139, 0.8);
}

/* Am√©liorer la visibilit√© des dropdowns */
[data-controller="floating-selector"] [data-dropdown-target="menu"] {
    backdrop-filter: blur(16px) !important;
    -webkit-backdrop-filter: blur(16px) !important;
    background: rgba(15, 23, 42, 0.95) !important;
    border: 1px solid rgba(71, 85, 105, 0.8) !important;
}

/* Animation pour le bouton flottant */
[data-controller="floating-selector"] button[data-floating-selector-target="trigger"] {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

[data-controller="floating-selector"] button[data-floating-selector-target="trigger"]:hover {
    transform: translateY(-4px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(59, 130, 246, 0.3);
}

/* Panel d'animation d'entr√©e */
[data-floating-selector-target="panel"]:not(.hidden) {
    animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

{% endif %}