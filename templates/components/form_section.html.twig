{% set icon_class = color is defined ? 'text-' ~ color ~ '-400' : '' %}

<div>
    <h3 class="text-white text-lg font-semibold mb-4 flex items-center {{ icon_class }}">
        {% if icon is defined %}
            <span class="text-2xl mr-3">{{ icon }}</span>
        {% endif %}
        {{ title }}
    </h3>
    <div class="wrapper-background">        
        {{ content|raw }}
    </div>
</div>
