<nav class="bg-gray-800 border-b border-gray-700">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
            <h1 class="text-white text-xl font-bold">{{ title }}</h1>
            
            <div class="flex items-center space-x-4">
                {% if actions is defined %}
                    {% for action in actions %}
                        <a href="{{ action.url }}" 
                           class="{{ action.class|default('text-gray-300 hover:text-white') }}">
                            {{ action.label }}
                        </a>
                    {% endfor %}
                {% endif %}
                
                {% if back_url is defined %}
                    <a href="{{ back_url }}" class="text-blue-400 hover:text-blue-300">
                        {{ back_label|default('← Retour') }}
                    </a>
                {% endif %}
                
                {% if show_user_menu|default(false) %}
                    <span class="text-gray-300">{{ app.user.pseudonymeWebsite ?? app.user.email }}</span>
                    <a href="{{ path('app_logout') }}" class="text-red-400 hover:text-red-300">Déconnexion</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>