Usage: {% include 'components/stats_card.html.twig' with {
    title: 'Titre',
    value: '42M',
    price: 1500000 (optionnel - pour utiliser price_display),
    price_color: 'green' (optionnel - couleur du prix),
    subtitle: 'Description optionnelle',
    icon: 'ðŸ’°' (optionnel),
    color: 'blue' (optionnel: blue, green, orange, red, purple, yellow),
    size: 'normal' (optionnel: normal, large)
} %}
#}

{% set color_class = 'text-' ~ (color|default('blue')) ~ '-400' %}
{% set value_size = (size|default('normal')) == 'large' ? 'text-3xl' : 'text-2xl' %}

<div class="wrapper-background text-center">
    <h3 class="text-white text-lg font-semibold mb-2 flex items-center justify-center">
        {% if icon is defined %}
            <span class="mr-2">{{ icon }}</span>
        {% endif %}
        {{ title }}
    </h3>
    
    {% if price is defined %}
        {# Utilise price_display pour les prix #}
        <div class="{{ value_size }} font-bold">
            {% include 'components/price_display.html.twig' with {
                price: price,
                size: size|default('normal') == 'large' ? 'large' : 'normal',
                color: price_color|default(color|default('blue')),
                show_kamas: true
            } %}
        </div>
    {% else %}
        {# Affichage normal pour les autres valeurs #}
        <p class="{{ color_class }} {{ value_size }} font-bold">{{ value }}</p>
    {% endif %}
    
    {% if subtitle is defined %}
        <p class="text-gray-400 text-sm">{{ subtitle }}</p>
    {% endif %}
</div>