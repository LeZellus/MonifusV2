{% set action_color_class = 'text-' ~ (action_color|default('green')) ~ '-400' %}

<div class="wrapper-background mb-6">
    <div class="flex items-center space-x-4">
        <div class="w-12 h-12 rounded-full overflow-hidden">
            <img src="{{ character.classe.imagePath }}" 
                alt="{{ character.classe.name }}" 
                class="w-full h-full object-cover">
        </div>
        <div>
            <h2 class="text-white text-xl font-semibold">{{ character.name }}</h2>
            <p class="text-gray-400">{{ character.classe.name }} â€¢ {{ character.server.name }}</p>
        </div>
        <div class="ml-auto text-right">
            <div class="{{ action_color_class }} font-semibold">
                {% if action_icon is defined %}
                    {{ action_icon }}
                {% endif %}
                {{ action_title }}
            </div>
            <div class="text-gray-400 text-sm">{{ action_description }}</div>
        </div>
    </div>
</div>