{# Turbo Stream pour notifications auto-dismiss #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-dismiss pour les notifications
    document.addEventListener('turbo:frame-load', function(event) {
        const notifications = event.target.querySelectorAll('[data-auto-dismiss]');
        notifications.forEach(notification => {
            const delay = parseInt(notification.dataset.autoDismiss) || 3000;
            setTimeout(() => {
                notification.style.animation = 'slide-out 0.3s ease-in forwards';
                setTimeout(() => notification.remove(), 300);
            }, delay);
        });
    });
});
</script>