{# templates/components/compact_profile_header.html.twig #}
{% if app.user and selectorData is defined and selectorData.selectedCharacter %}
<!-- Header compact du personnage sélectionné -->
<div class="bg-gray-800/30 border-b border-gray-600/30 py-3 mb-6">
    <div class="wrapper-container">
        <div class="flex items-center justify-between">
            <!-- Infos du personnage sélectionné -->
            <div class="flex items-center space-x-3">
                <img src="{{ asset(selectorData.selectedCharacter.classe.imagePath) }}"
                     alt="{{ selectorData.selectedCharacter.classe.name }}"
                     class="w-8 h-8 rounded object-cover">

                <div>
                    <div class="text-white font-medium">{{ selectorData.selectedCharacter.name }}</div>
                    <div class="text-gray-400 text-sm">{{ selectorData.selectedCharacter.classe.name }} • {{ selectorData.selectedCharacter.server.name }}</div>
                </div>

                <!-- Mini badges -->
                <div class="hidden sm:flex items-center space-x-2">
                    {% set availableLots = selectorData.selectedCharacter.tempLotsAvailable ?? 0 %}
                    {% set salesTransactions = selectorData.selectedCharacter.tempSalesTransactions ?? 0 %}
                    {% set watchesCount = selectorData.selectedCharacter.tempWatchesCount ?? 0 %}

                    {% if availableLots > 0 %}
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-green-500/20 text-green-300">
                            📦 {{ availableLots }}
                        </span>
                    {% endif %}

                    {% if salesTransactions > 0 %}
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-blue-500/20 text-blue-300">
                            💰 {{ salesTransactions }}
                        </span>
                    {% endif %}

                    {% if watchesCount > 0 %}
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-orange-500/20 text-orange-300">
                            👁️ {{ watchesCount }}
                        </span>
                    {% endif %}
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="flex items-center space-x-2">
                <a href="{{ path('app_lot_new') }}"
                   class="inline-flex items-center space-x-1 bg-green-600/20 hover:bg-green-600/30 border border-green-500/50 rounded-lg px-3 py-2 text-xs text-green-300 hover:text-green-200 transition-all">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    <span class="hidden sm:inline">Nouveau lot</span>
                    <span class="sm:hidden">+</span>
                </a>

                <a href="{{ path('app_analytics_index') }}"
                   class="inline-flex items-center space-x-1 bg-purple-600/20 hover:bg-purple-600/30 border border-purple-500/50 rounded-lg px-3 py-2 text-xs text-purple-300 hover:text-purple-200 transition-all">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <span class="hidden sm:inline">Analytics</span>
                    <span class="sm:hidden">📊</span>
                </a>
            </div>
        </div>
    </div>
</div>
{% endif %}