{% extends 'base.html.twig' %}

{% block title %}Nouveau Personnage{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouveau Personnage - ' ~ profile.name,
        'back_url': path('app_profile_index')
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        {% include 'profile/_form.html.twig' with {
            form: form,
            icon: '👤',
            page_title: 'Créer un Personnage',
            page_description: 'Ajoutez un nouveau trader à votre profil de trading.',
            profile_info: {
                name: profile.name,
                description: 'Profil de trading',
                action_title: '👤 Nouveau Personnage',
                action_description: 'Ajouter un trader'
            },
            info_title: 'Pourquoi ajouter un personnage ?',
            info_icon: 'ℹ️',
            info_color: 'green',
            info_content: '<p>• 🎮 Chaque personnage peut avoir sa propre stratégie de trading</p><p>• 🗂️ Organiser vos lots par serveur et spécialisation</p><p>• 📊 Analyser les performances par personnage</p><p>• 🔄 Basculer facilement entre vos différents traders</p>',
            form_title: 'Informations du personnage',
            form_icon: '📝',
            form_color: 'green',
            form_fields: [
                {
                    name: 'name',
                    placeholder: 'ex: Kama-Hunter, Trading-Master...',
                    help_text: '🎮 Nom exact de votre personnage Dofus',
                    focus_color: 'green'
                },
                {
                    name: 'server',
                    help_text: '🌍 Serveur sur lequel joue ce personnage',
                    focus_color: 'green'
                },
                {
                    name: 'classe',
                    help_text: '⚔️ Classe de votre personnage',
                    focus_color: 'green'
                }
            ],
            next_steps: {
                title: 'Après la création',
                icon: '🚀',
                color: 'blue',
                content: '<p>1. ✅ Le personnage sera ajouté au profil "' ~ profile.name ~ '"</p><p>2. 🎯 Il sera automatiquement sélectionné comme personnage actif</p><p>3. 📦 Vous pourrez commencer à ajouter des lots de trading</p><p>4. 👁️ Configurer des surveillances de marché</p>'
            },
            submit_text: 'Créer le personnage',
            submit_icon: '👤',
            submit_color: 'success',
            cancel_url: path('app_profile_index')
        } %}
    </div>
{% endblock %}