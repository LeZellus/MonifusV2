{% extends 'base.html.twig' %}

{% block title %}Nouveau Personnage{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouveau Personnage - ' ~ profile.name,
        'back_url': path('app_profile_index')
    } %}
{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">

    <div class="wrapper-container">
        <div class="max-w-md mx-auto w-full bg-gray-800 rounded-lg p-6">
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.server, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.server) }}
                {{ form_errors(form.server) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.classe, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.classe) }}
                {{ form_errors(form.classe) }}
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Cr√©er le personnage
            </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}