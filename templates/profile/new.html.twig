{% extends 'base.html.twig' %}

{% block title %}Nouveau Profil de Trading{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouveau Profil de Trading',
        'back_url': path('app_profile_index')
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        {% include 'profile/_form.html.twig' with {
            form: form,
            icon: '👥',
            page_title: 'Créer un Profil de Trading',
            page_description: 'Un profil regroupe plusieurs personnages Dofus et organise votre activité de trading.',
            form_title: 'Informations du profil',
            form_icon: '📝',
            form_color: 'green',
            form_fields: [
                {
                    name: 'name',
                    placeholder: 'ex: Trading Principal, Kamas Farm, etc.',
                    help_text: '💡 Choisissez un nom qui décrit votre stratégie',
                    focus_color: 'blue'
                },
                {
                    name: 'description',
                    attributes: {
                        'class': 'w-full px-4 py-3 border border-gray-600 bg-gray-700 text-white rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20',
                        'rows': 4
                    },
                    placeholder: 'Décrivez votre stratégie de trading, vos objectifs, les serveurs ciblés...',
                    help_text: '📋 Description optionnelle de votre approche'
                }
            ],
            next_steps: {
                title: 'Prochaines étapes',
                icon: '🚀',
                color: 'blue',
                content: '<p>1. ✅ Créer le profil</p><p>2. 👤 Ajouter vos personnages Dofus</p><p>3. 📦 Commencer à tracker vos lots</p><p>4. 📊 Analyser vos profits</p>'
            },
            submit_text: 'Créer le profil',
            submit_icon: '✨',
            submit_color: 'primary',
            cancel_url: path('app_profile_index')
        } %}
    </div>
{% endblock %}