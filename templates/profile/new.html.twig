{% extends 'base.html.twig' %}

{% block title %}Nouveau Profil de Trading{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Nouveau Profil de Trading',
        'back_url': path('app_profile_index')
    } %}
{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">

    <div class="wrapper-container">
        <div class="w-full max-w-md mx-auto bg-gray-800 rounded-lg p-6">
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-white font-medium mb-2'}}) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Cr√©er le profil
            </button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}