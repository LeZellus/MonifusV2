{% extends 'base.html.twig' %}

{% block title %}Mes Profils de Trading{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <!-- Bloc Profil Actif (ex-section bleue) -->
        {% if profiles|length > 0 %}
            {% set activeProfile = selectedProfile ?? profiles[0] %}
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-white text-2xl font-bold flex items-center">
                        <span class="text-3xl mr-3">üë•</span>
                        {{ activeProfile.name }}
                    </h2>
                    <div class="text-right">
                        <span class="bg-green-600 text-green-100 px-3 py-1 rounded-full text-sm font-medium">
                            ‚úì PROFIL ACTIF
                        </span>
                    </div>
                </div>

                {% if activeProfile.description %}
                    <div class="bg-white bg-opacity-10 rounded-lg p-3 mb-4">
                        <p class="text-blue-100 text-sm italic">"{{ activeProfile.description }}"</p>
                    </div>
                {% endif %}

                <!-- Personnage actif -->
                {% if selectedCharacter and selectedCharacter.tradingProfile.id == activeProfile.id %}
                    <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 rounded-full overflow-hidden border-4 border-white border-opacity-20">
                                <img src="{{ selectedCharacter.classe.imagePath }}" 
                                     alt="{{ selectedCharacter.classe.name }}" 
                                     class="w-full h-full object-cover"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="w-full h-full bg-blue-500 flex items-center justify-center text-white font-bold text-xl" style="display: none;">
                                    {{ selectedCharacter.name|first|upper }}
                                </div>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-white text-xl font-bold">{{ selectedCharacter.name }}</h3>
                                <p class="text-blue-100">
                                    {{ selectedCharacter.classe.name }} ‚Ä¢ {{ selectedCharacter.server.name }}
                                </p>
                                <div class="flex space-x-4 text-sm mt-2">
                                    <span class="text-green-200">üì¶ {{ selectedCharacter.tempLotsCount ?? 0 }} lots</span>
                                    <span class="text-orange-200">üëÅÔ∏è {{ selectedCharacter.tempWatchesCount ?? 0 }} watch</span>
                                    <span class="text-blue-200">‚úÖ {{ selectedCharacter.tempSoldLotsCount ?? 0 }} vendus</span>
                                </div>
                            </div>
                            <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm">
                                ‚úì PERSONNAGE ACTIF
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- S√©lection des personnages du profil actif -->
                {% set profileCharacters = activeProfile.dofusCharacters %}
                {% if profileCharacters|length > 1 or not selectedCharacter %}
                    <div class="text-center">
                        <h4 class="text-white font-medium mb-4">
                            {{ selectedCharacter ? 'Changer de personnage :' : 'S√©lectionnez un personnage :' }}
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                            {% for character in profileCharacters %}
                                <div class="bg-white bg-opacity-10 hover:bg-opacity-25 rounded-lg p-4 transition-all duration-200 border-2 {{ selectedCharacter and character.id == selectedCharacter.id ? 'border-yellow-400 bg-yellow-400 bg-opacity-20' : 'border-transparent hover:border-white hover:border-opacity-30' }}">
                                    
                                    <a href="{{ path('app_profile_character_select', {id: character.id}) }}" class="block">
                                        <div class="flex items-center space-x-3 mb-2">
                                            <div class="w-10 h-10 rounded-full overflow-hidden">
                                                <img src="{{ character.classe.imagePath }}" 
                                                     alt="{{ character.classe.name }}" 
                                                     class="w-full h-full object-cover"
                                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                <div class="w-full h-full bg-blue-400 rounded-full flex items-center justify-center text-white font-bold" style="display: none;">
                                                    {{ character.name|first|upper }}
                                                </div>
                                            </div>
                                            <div class="text-left flex-1">
                                                <div class="text-white font-medium">{{ character.name }}</div>
                                                <div class="text-blue-200 text-sm">{{ character.server.name }}</div>
                                            </div>
                                            {% if selectedCharacter and character.id == selectedCharacter.id %}
                                                <div class="text-yellow-400 text-xl">‚òÖ</div>
                                            {% endif %}
                                        </div>
                                        <div class="flex space-x-3 text-xs">
                                            <span class="text-green-200">üì¶ {{ character.tempLotsCount ?? 0 }}</span>
                                            <span class="text-orange-200">üëÅÔ∏è {{ character.tempWatchesCount ?? 0 }}</span>
                                            <span class="text-blue-200">‚úÖ {{ character.tempSoldLotsCount ?? 0 }}</span>
                                        </div>
                                    </a>
                                    
                                    <!-- Bouton de suppression du personnage -->
                                    {% if profileCharacters|length > 1 %}
                                        <form method="post" action="{{ path('app_profile_character_delete', {id: character.id}) }}" 
                                              onsubmit="return confirm('Supprimer {{ character.name }} et toutes ses donn√©es ?')" 
                                              class="mt-2">
                                            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded text-xs transition-colors">
                                                üóëÔ∏è Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Boutons d'action du profil -->
                <div class="flex justify-center space-x-3 mt-4">
                    <a href="{{ path('app_profile_character_new', {id: activeProfile.id}) }}" 
                    class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-4 py-2 rounded-lg transition-all duration-200 font-medium inline-flex items-center">
                        <span class="mr-2">üë§</span>
                        Ajouter un personnage
                    </a>
                    
                    <a href="{{ path('app_profile_edit', {id: activeProfile.id}) }}" 
                    class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg transition-all duration-200 font-medium inline-flex items-center">
                        <span class="mr-2">‚úèÔ∏è</span>
                        Modifier le profil
                    </a>
                    
                    <form method="post" action="{{ path('app_profile_delete', {id: activeProfile.id}) }}" 
                        onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer le profil {{ activeProfile.name }} et tous ses personnages ?')" 
                        class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-all duration-200 font-medium inline-flex items-center">
                            <span class="mr-2">üóëÔ∏è</span>
                            Supprimer ce profil
                        </button>
                    </form>
                </div>
            </div>
        {% endif %}

        <!-- Actions rapides -->
        {% if selectedCharacter %}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <a href="{{ path('app_lot_index') }}" 
                   class="bg-gradient-to-br from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white p-4 rounded-xl text-center transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <div class="text-3xl mb-2">üì¶</div>
                    <div class="font-bold">Mes Lots</div>
                    <div class="text-green-100 text-sm">G√©rer trading</div>
                </a>
                <a href="{{ path('app_market_watch_index') }}" 
                   class="bg-gradient-to-br from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white p-4 rounded-xl text-center transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <div class="text-3xl mb-2">üëÅÔ∏è</div>
                    <div class="font-bold">Surveillance</div>
                    <div class="text-orange-100 text-sm">Prix march√©</div>
                </a>
                <a href="{{ path('app_lot_new') }}" 
                   class="bg-gradient-to-br from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white p-4 rounded-xl text-center transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <div class="text-3xl mb-2">‚ûï</div>
                    <div class="font-bold">Nouveau Lot</div>
                    <div class="text-blue-100 text-sm">Ajouter item</div>
                </a>
                <a href="{{ path('app_market_watch_new') }}" 
                   class="bg-gradient-to-br from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white p-4 rounded-xl text-center transition-all duration-200 transform hover:scale-105 shadow-lg">
                    <div class="text-3xl mb-2">üîç</div>
                    <div class="font-bold">Surveiller</div>
                    <div class="text-purple-100 text-sm">Observer prix</div>
                </a>
            </div>
        {% endif %}

        <!-- S√©lection des Profils -->
        <div class="flex justify-between items-center">
            <h2 class="text-white text-2xl font-bold flex items-center">
                <span class="text-3xl mr-3">üîÑ</span>
                Changer de Profil
            </h2>
            <a href="{{ path('app_profile_new') }}" 
               class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-6 py-3 rounded-lg transition-all duration-200 font-semibold flex items-center shadow-lg transform hover:scale-105">
                <span class="text-lg mr-2">‚ú®</span>
                Nouveau Profil
            </a>
        </div>

        {% if profiles|length > 1 %}
            <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
                {% for profile in profiles %}
                    {% if profile.id != activeProfile.id %}
                        <a href="{{ path('app_profile_switch', {id: profile.id}) }}" 
                           class="wrapper-background border-2 border-gray-700 hover:border-gray-600 transition-all duration-200 block">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center">
                                        <span class="text-white font-bold text-lg">{{ profile.name|first|upper }}</span>
                                    </div>
                                    <div>
                                        <h3 class="text-white text-xl font-bold">{{ profile.name }}</h3>
                                        <div class="text-gray-400 text-sm">
                                            {{ profile.dofusCharacters|length }} personnage{{ profile.dofusCharacters|length > 1 ? 's' : '' }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if profile.description %}
                                <div class="bg-gray-700 bg-opacity-50 rounded-lg p-3">
                                    <p class="text-gray-300 text-sm italic">"{{ profile.description }}"</p>
                                </div>
                            {% else %}
                                <div class="bg-gray-700 bg-opacity-50 rounded-lg p-3">
                                    <p class="text-gray-500 text-sm italic">Aucune description</p>
                                </div>
                            {% endif %}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        {% elseif profiles|length == 1 %}
            <div class="text-center py-8">
                <div class="wrapper-background max-w-md mx-auto">
                    <div class="text-4xl mb-4">üë•</div>
                    <h3 class="text-white text-lg font-bold mb-3">Un seul profil</h3>
                    <p class="text-gray-400 mb-6">
                        Vous n'avez qu'un seul profil de trading. Cr√©ez-en un autre pour organiser diff√©rentes strat√©gies.
                    </p>
                    <a href="{{ path('app_profile_new') }}" 
                       class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-6 py-3 rounded-lg transition-all duration-200 font-bold inline-flex items-center shadow-lg">
                        <span class="text-lg mr-2">‚ú®</span>
                        Cr√©er un second profil
                    </a>
                </div>
            </div>
        {% else %}
            <!-- √âtat vide -->
            <div class="text-center py-16">
                <div class="wrapper-background max-w-md mx-auto">
                    <div class="text-6xl mb-4">üë•</div>
                    <h3 class="text-white text-xl font-bold mb-3">Aucun profil de trading</h3>
                    <p class="text-gray-400 mb-6">
                        Cr√©ez votre premier profil pour organiser vos personnages et commencer √† tracker vos trades.
                    </p>
                    <a href="{{ path('app_profile_new') }}" 
                       class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-8 py-4 rounded-lg transition-all duration-200 font-bold flex items-center justify-center shadow-lg transform hover:scale-105">
                        <span class="text-xl mr-3">‚ú®</span>
                        Cr√©er mon premier profil
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}