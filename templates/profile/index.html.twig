{% extends 'base.html.twig' %}

{% block title %}Mes Profils de Trading{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Mes Profils de Trading',
        'back_url': path('app_trading_dashboard'),
        'back_label': '‚Üê Retour Dashboard'
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <!-- S√©lection du personnage actif -->
        {% if characters|length > 0 %}
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-4">
                <h2 class="text-white text-xl font-bold mb-4">üéÆ Personnage actif</h2>
                
                {% if selectedCharacter %}
                    <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-lg">{{ selectedCharacter.name|first|upper }}</span>
                                </div>
                                <div>
                                    <h3 class="text-white text-lg font-semibold">{{ selectedCharacter.name }}</h3>
                                    <p class="text-blue-100 text-sm">
                                        {{ selectedCharacter.classe.name }} ‚Ä¢ {{ selectedCharacter.server.name }}
                                    </p>
                                    <p class="text-blue-200 text-xs">
                                        Profil: {{ selectedCharacter.tradingProfile.name }}
                                    </p>
                                </div>
                            </div>
                            <div class="text-center">
                                <div class="text-green-400 text-lg font-bold">‚úì ACTIF</div>
                                <div class="text-green-200 text-xs">Toutes les actions utilisent ce personnage</div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="bg-red-500 bg-opacity-20 rounded-lg p-4 mb-4">
                        <div class="text-center text-white">
                            <div class="text-lg font-semibold mb-2">‚ö†Ô∏è Aucun personnage s√©lectionn√©</div>
                            <div class="text-red-200 text-sm">S√©lectionnez un personnage ci-dessous pour commencer</div>
                        </div>
                    </div>
                {% endif %}

                {% if characters|length > 1 or not selectedCharacter %}
                    <div class="text-center">
                        <h4 class="text-white font-medium mb-3">Changer de personnage actif :</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                            {% for character in characters %}
                                <a href="{{ path('app_profile_character_select', {id: character.id}) }}" 
                                   class="bg-white bg-opacity-10 hover:bg-opacity-20 rounded-lg p-3 transition-colors 
                                          {{ selectedCharacter and character.id == selectedCharacter.id ? 'ring-2 ring-yellow-400' : '' }}">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-8 h-8 bg-blue-400 rounded-full flex items-center justify-center">
                                            <span class="text-white font-bold text-sm">{{ character.name|first|upper }}</span>
                                        </div>
                                        <div class="text-left">
                                            <div class="text-white font-medium text-sm">{{ character.name }}</div>
                                            <div class="text-blue-200 text-xs">{{ character.server.name }}</div>
                                        </div>
                                        {% if selectedCharacter and character.id == selectedCharacter.id %}
                                            <div class="ml-auto text-yellow-400">‚òÖ</div>
                                        {% endif %}
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <!-- Actions rapides -->
        {% if selectedCharacter %}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <a href="{{ path('app_lot_index') }}" 
                   class="bg-green-600 hover:bg-green-700 text-white p-4 rounded-lg text-center transition-colors">
                    <div class="text-2xl mb-2">üì¶</div>
                    <div class="font-medium">Mes Lots</div>
                    <div class="text-green-200 text-sm">G√©rer trading</div>
                </a>
                <a href="{{ path('app_market_watch_index') }}" 
                   class="bg-orange-600 hover:bg-orange-700 text-white p-4 rounded-lg text-center transition-colors">
                    <div class="text-2xl mb-2">üëÅÔ∏è</div>
                    <div class="font-medium">Surveillance</div>
                    <div class="text-orange-200 text-sm">Prix march√©</div>
                </a>
                <a href="{{ path('app_lot_new') }}" 
                   class="bg-blue-600 hover:bg-blue-700 text-white p-4 rounded-lg text-center transition-colors">
                    <div class="text-2xl mb-2">‚ûï</div>
                    <div class="font-medium">Nouveau Lot</div>
                    <div class="text-blue-200 text-sm">Ajouter item</div>
                </a>
                <a href="{{ path('app_market_watch_new') }}" 
                   class="bg-purple-600 hover:bg-purple-700 text-white p-4 rounded-lg text-center transition-colors">
                    <div class="text-2xl mb-2">üîç</div>
                    <div class="font-medium">Surveiller</div>
                    <div class="text-purple-200 text-sm">Observer prix</div>
                </a>
            </div>
        {% endif %}

        <!-- Gestion des profils -->
        <div class="flex justify-between items-center">
            <h2 class="text-white text-2xl font-bold">Profils de Trading</h2>
            <a href="{{ path('app_profile_new') }}" 
               class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                + Nouveau Profil
            </a>
        </div>

        {% if profiles|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for profile in profiles %}
                    <div class="wrapper-background">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-white text-xl font-semibold">{{ profile.name }}</h3>
                            {% if selectedCharacter and selectedCharacter.tradingProfile.id == profile.id %}
                                <span class="bg-green-600 text-white px-2 py-1 rounded text-xs">ACTIF</span>
                            {% endif %}
                        </div>
                        
                        {% if profile.description %}
                            <p class="text-gray-300 mb-4">{{ profile.description }}</p>
                        {% endif %}
                        
                        <div class="text-sm text-gray-400 mb-4">
                            <p>Personnages : {{ profile.dofusCharacters|length }}</p>
                            <p>Cr√©√© le : {{ profile.createdAt|date('d/m/Y') }}</p>
                        </div>

                        <div class="mb-4">
                            <a href="{{ path('app_profile_character_new', {id: profile.id}) }}" 
                               class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                + Personnage
                            </a>
                        </div>

                        {% if profile.dofusCharacters|length > 0 %}
                            <div class="border-t border-gray-700 pt-4">
                                <h4 class="text-gray-300 font-medium mb-2">Personnages :</h4>
                                {% for character in profile.dofusCharacters %}
                                    <div class="flex justify-between items-center text-sm text-gray-400 mb-2 p-2 bg-gray-700 rounded">
                                        <div>
                                            <span class="text-white">{{ character.name }}</span>
                                            <span class="text-gray-400">({{ character.classe.name }}) - {{ character.server.name }}</span>
                                        </div>
                                        {% if selectedCharacter and character.id == selectedCharacter.id %}
                                            <span class="text-green-400 text-xs">‚òÖ ACTIF</span>
                                        {% else %}
                                            <a href="{{ path('app_profile_character_select', {id: character.id}) }}" 
                                               class="text-blue-400 hover:text-blue-300 text-xs">S√©lectionner</a>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <p class="text-gray-400 text-lg mb-4">Aucun profil de trading pour le moment</p>
                <a href="{{ path('app_profile_new') }}" 
                   class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors">
                    Cr√©er mon premier profil
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}