{% extends 'base.html.twig' %}

{% block title %}Mes Profils de Trading{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <h1 class="text-white text-xl font-bold">Mes Profils de Trading</h1>
                <a href="{{ path('app_trading_dashboard') }}" class="text-blue-400 hover:text-blue-300">← Retour Dashboard</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-white text-2xl font-bold">Profils de Trading</h2>
            <a href="{{ path('app_profile_new') }}" 
               class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                + Nouveau Profil
            </a>
        </div>

        {% if profiles|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for profile in profiles %}
                    <div class="bg-gray-800 rounded-lg p-6">
                        <h3 class="text-white text-xl font-semibold mb-2">{{ profile.name }}</h3>
                        {% if profile.description %}
                            <p class="text-gray-300 mb-4">{{ profile.description }}</p>
                        {% endif %}
                        
                        <div class="text-sm text-gray-400 mb-4">
                            <p>Personnages : {{ profile.dofusCharacters|length }}</p>
                            <p>Créé le : {{ profile.createdAt|date('d/m/Y') }}</p>
                        </div>

                        <div class="flex space-x-2">
                            <a href="{{ path('app_profile_character_new', {id: profile.id}) }}" 
                               class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm transition-colors">
                                + Personnage
                            </a>
                        </div>

                        {% if profile.dofusCharacters|length > 0 %}
                            <div class="mt-4 border-t border-gray-700 pt-4">
                                <h4 class="text-gray-300 font-medium mb-2">Personnages :</h4>
                                {% for character in profile.dofusCharacters %}
                                    <div class="text-sm text-gray-400 mb-1">
                                        {{ character.name }} ({{ character.classe.name }}) - {{ character.server.name }}
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <p class="text-gray-400 text-lg mb-4">Aucun profil de trading pour le moment</p>
                <a href="{{ path('app_profile_new') }}" 
                   class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors">
                    Créer mon premier profil
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}