                                                <div class="text-{{ month.profit >= 0 ? 'green' : 'red' }}-400 font-bold text-2xl mb-1">
                                                    {{ (month.profit/1000000)|number_format(1) }}M
                                                </div>
                                                <div class="text-gray-400 text-sm">
