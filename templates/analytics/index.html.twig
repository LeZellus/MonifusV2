{% extends 'base.html.twig' %}

{% block title %}Analytics Trading{% endblock %}

{% block navbar %}
    {% include 'components/navbar.html.twig' with {
        'title': 'Analytics Trading',
        'back_url': path('app_trading_dashboard'),
        'back_label': '‚Üê Dashboard'
    } %}
{% endblock %}

{% block body %}
    <div class="wrapper-container">
        <!-- Statistiques globales -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-2">üí∞ Investi</h3>
                <p class="text-yellow-400 text-2xl font-bold">
                    {{ (stats.global.investedAmount / 1000000)|number_format(1) }}M
                </p>
                <p class="text-gray-400 text-sm">{{ stats.global.availableLots }} lots disponibles</p>
            </div>
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-2">‚úÖ Profit R√©alis√©</h3>
                <p class="text-green-400 text-2xl font-bold">
                    {{ (stats.global.realizedProfit / 1000000)|number_format(1) }}M
                </p>
                <p class="text-gray-400 text-sm">{{ stats.global.soldLots }} lots vendus</p>
            </div>
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-2">üéØ Profit Potentiel</h3>
                <p class="text-blue-400 text-2xl font-bold">
                    {{ (stats.global.potentialProfit / 1000000)|number_format(1) }}M
                </p>
                <p class="text-gray-400 text-sm">Si tout vendu au prix cible</p>
            </div>
            <div class="wrapper-background">
                <h3 class="text-white text-lg font-semibold mb-2">üìä Total Lots</h3>
                <p class="text-purple-400 text-2xl font-bold">{{ stats.global.totalLots }}</p>
                <p class="text-gray-400 text-sm">{{ stats.charactersCount }} personnages</p>
            </div>
        </div>

        <!-- Top items rentables -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <div class="wrapper-background">
                <h3 class="text-white text-xl font-semibold mb-4">üèÜ Top Items Rentables</h3>
                {% if stats.topItems|length > 0 %}
                    <div class="space-y-3">
                        {% for item in stats.topItems %}
                            {% set profit = item.totalProfit %}
                            <div class="flex justify-between items-center p-4 bg-gray-700 rounded-lg">
                                <div>
                                    <div class="text-white font-medium">{{ item.itemName }}</div>
                                    <div class="text-gray-400 text-sm">{{ item.lotsCount }} lots</div>
                                </div>
                                <div class="text-right">
                                    <div class="text-{{ profit >= 0 ? 'green' : 'red' }}-400 font-bold">
                                        {{ (profit / 1000000)|number_format(1) }}M
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-400">Aucun item trad√© pour le moment</p>
                {% endif %}
            </div>
        </div>

        <!-- Ratios et m√©triques -->
        {% if stats.global.totalLots > 0 %}
            <div class="wrapper-background">
                <h3 class="text-white text-xl font-semibold mb-4">üìä M√©triques Cl√©s</h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-400">
                            {{ ((stats.global.soldLots / stats.global.totalLots) * 100)|number_format(1) }}%
                        </div>
                        <div class="text-gray-400">Taux de vente</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-400">
                            {% set totalProfit = stats.global.realizedProfit + stats.global.potentialProfit %}
                            {% set roi = stats.global.investedAmount > 0 ? (totalProfit / stats.global.investedAmount * 100) : 0 %}
                            {{ roi|number_format(1) }}%
                        </div>
                        <div class="text-gray-400">ROI Total</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-yellow-400">
                            {{ (stats.global.totalLots / stats.charactersCount)|number_format(1) }}
                        </div>
                        <div class="text-gray-400">Lots par personnage</div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}